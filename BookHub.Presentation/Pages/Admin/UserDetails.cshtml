@page "/Admin/UserDetails/{userId:int}"
@model BookHub.Presentation.Pages.Admin.UserDetailsModel
@{
    ViewData["Title"] = "User Details - Admin";
}
<div class="admin-dashboard">
    <div class="admin-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="admin-title">
                        <i class="bi bi-person-circle me-2"></i>
                        User Details
                    </h1>
                    <p class="admin-subtitle">View and manage user information</p>
                </div>
                <div class="col-auto">
                    <a href="/Admin/Users" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-1"></i>Back to Users
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-4">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }
        @if (TempData["Message"] != null)
        {
            var messageType = TempData["MessageType"]?.ToString() == "success" ? "success" : "danger";
            <div class="alert alert-@messageType" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Message"]
            </div>
        }
        @if (Model.User == null)
        {
            <div class="admin-card">
                <div class="admin-card-body text-center py-5">
                    <i class="bi bi-exclamation-circle text-warning" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">User Not Found</h5>
                    <p class="text-muted">The user you're looking for doesn't exist.</p>
                    <a href="/Admin/Users" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Users
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-4">
                    <div class="admin-card">
                        <div class="admin-card-header">
                            <h5><i class="bi bi-person me-2"></i>User Profile</h5>
                        </div>
                        <div class="admin-card-body text-center">
                            <div class="profile-image-container mb-3">
                                @if (string.IsNullOrEmpty(Model.User.ProfileImage) || Model.User.ProfileImage == "default.png")
                                {
                                    <img src="~/images/default-profile.png" class="profile-image" alt="Profile" />
                                }
                                else
                                {
                                    <img src="~/images/profiles/@Model.User.ProfileImage" class="profile-image" alt="Profile" />
                                }
                            </div>
                            <h4 class="mb-1">@Model.User.Name</h4>
                            <p class="text-muted mb-3">@Model.User.Email</p>
                            <div class="d-flex justify-content-center gap-2 mb-3">
                                <span class="badge bg-success">Active</span>
                                <span class="badge bg-secondary">User ID: @Model.User.UserId</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.User.Bio))
                            {
                                <div class="bio-section">
                                    <h6 class="text-muted mb-2">Bio</h6>
                                    <p class="text-start">@Model.User.Bio</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="admin-card mt-3">
                        <div class="admin-card-header">
                            <h5><i class="bi bi-gear me-2"></i>Actions</h5>
                        </div>
                        <div class="admin-card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-warning" onclick="restrictUser(@Model.User.UserId, '@Model.User.Name.Replace("'", "\\'")')">
                                    <i class="bi bi-lock me-2"></i>Restrict User
                                </button>
                                <button class="btn btn-danger" onclick="deleteUser(@Model.User.UserId, '@Model.User.Name.Replace("'", "\\'")')">
                                    <i class="bi bi-trash me-2"></i>Delete User
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="admin-card">
                        <div class="admin-card-header">
                            <h5><i class="bi bi-book me-2"></i>User's Library (@(Model.UserBooks?.Count ?? 0) books)</h5>
                        </div>
                        <div class="admin-card-body">
                            @if (Model.UserBooks != null && Model.UserBooks.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Cover</th>
                                                <th>Book Title</th>
                                                <th>Author</th>
                                                <th>Status</th>
                                                <th>Added Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.UserBooks)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(book.CoverUrl))
                                                        {
                                                            <img src="@book.CoverUrl" alt="Book Cover" class="book-cover-tiny" onerror="this.src='/images/no-cover.svg'">
                                                        }
                                                        else
                                                        {
                                                            <div class="no-cover-tiny">
                                                                <i class="bi bi-book"></i>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td><strong>@book.Title</strong></td>
                                                    <td>@book.Author</td>
                                                    <td>
                                                        <span class="badge bg-info">In Library</span>
                                                    </td>
                                                    <td>
                                                        <small class="text-muted">@book.CreatedDate.ToString("MMM dd, yyyy")</small>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="mt-3">
                                    <strong>Total Books:</strong> <span class="badge bg-primary">@(Model.UserBooks?.Count ?? 0)</span>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="bi bi-book text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2">This user hasn't added any books to their library yet.</p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="admin-card mt-3">
                        <div class="admin-card-header">
                            <h5><i class="bi bi-info-circle me-2"></i>Account Information</h5>
                        </div>
                        <div class="admin-card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">User ID</label>
                                    <p class="mb-0"><strong>@Model.User.UserId</strong></p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Email Address</label>
                                    <p class="mb-0"><strong>@Model.User.Email</strong></p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Full Name</label>
                                    <p class="mb-0"><strong>@Model.User.Name</strong></p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Total Books</label>
                                    <p class="mb-0"><strong>@(Model.UserBooks?.Count ?? 0)</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        function restrictUser(userId, userName) {
            if (confirm(`Are you sure you want to restrict ${userName}? This will limit their access to the platform.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Admin/UserDetails/@Model.UserId?handler=RestrictUser';
                const userIdInput = document.createElement('input');
                userIdInput.type = 'hidden';
                userIdInput.name = 'userId';
                userIdInput.value = userId;
                form.appendChild(userIdInput);
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                if (tokenInput) {
                    const tokenClone = tokenInput.cloneNode();
                    form.appendChild(tokenClone);
                }
                document.body.appendChild(form);
                form.submit();
            }
        }
        function deleteUser(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"? This will permanently remove all their data including books, reviews, and reading history. This action cannot be undone.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Admin/UserDetails/@Model.UserId?handler=DeleteUser';
                const userIdInput = document.createElement('input');
                userIdInput.type = 'hidden';
                userIdInput.name = 'userId';
                userIdInput.value = userId;
                form.appendChild(userIdInput);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}
@section Styles {
    <style>
        .admin-dashboard {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
        }
        .admin-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .admin-subtitle {
            font-size: 1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }
        .admin-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
            border: none;
            margin-bottom: 2rem;
        }
        .admin-card-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
        }
        .admin-card-header h5 {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0;
        }
        .admin-card-body {
            padding: 1.5rem;
        }
        .profile-image-container {
            width: 150px;
            height: 150px;
            margin: 0 auto;
        }
        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #667eea;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .bio-section {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1rem;
        }
        .book-cover-tiny {
            width: 40px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
        }
        .no-cover-tiny {
            width: 40px;
            height: 60px;
            background: #e9ecef;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }
        .table th {
            border-top: none;
            font-weight: 600;
            color: #4a5568;
            font-size: 0.875rem;
        }
        .table td {
            vertical-align: middle;
        }
    </style>
}
