@page
@model BookHub.Presentation.Pages.VirtualBookshelfModel
@{
    ViewData["Title"] = "My Bookshelf";
}

<!-- Hidden form for anti-forgery token -->
<form style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="bookshelf-container">
    <!-- Header Section -->
    <div class="bookshelf-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="bi bi-bookshelf"></i>
                        My Personal Bookshelf
                    </h1>
                    <p class="page-subtitle">
                        Your personal library - @Model.TotalBooks book@(Model.TotalBooks != 1 ? "s" : "") in your collection
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="bookshelf-actions">
                        <a href="/Books" class="btn btn-success">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add More Books
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Statistics Section -->
        @if (Model.StatusStats.Any())
        {
            <div class="stats-section">
                <div class="row">
                    <div class="col-12">
                        <h5 class="stats-title">
                            <i class="bi bi-bar-chart me-2"></i>
                            Reading Progress
                        </h5>
                        <div class="reading-stats">
                            @foreach (var stat in Model.StatusStats)
                            {
                                <div class="stat-card">
                                    <div class="stat-count">@stat.Value</div>
                                    <div class="stat-label">@stat.Key</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Filter Buttons -->
        <div class="filter-section">
            <div class="row">
                <div class="col-12">
                    <div class="filter-buttons">
                        <a href="/VirtualBookshelf?filter=All" 
                           class="btn filter-btn @(Model.CurrentFilter == "All" ? "active" : "")">
                            All Books
                        </a>
                        <a href="/VirtualBookshelf?filter=Want to Read" 
                           class="btn filter-btn @(Model.CurrentFilter == "Want to Read" ? "active" : "")">
                            Want to Read
                        </a>
                        <a href="/VirtualBookshelf?filter=Reading" 
                           class="btn filter-btn @(Model.CurrentFilter == "Reading" ? "active" : "")">
                            Currently Reading
                        </a>
                        <a href="/VirtualBookshelf?filter=Read" 
                           class="btn filter-btn @(Model.CurrentFilter == "Read" ? "active" : "")">
                            Finished Reading
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Books Grid -->
        @if (Model.UserBooks.Any())
        {
            <div class="books-grid-section">
                <div class="row">
                    @foreach (var userBook in Model.UserBooks)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="user-book-card">
                                <!-- Book Cover -->
                                <div class="book-cover-container">
                                    @if (!string.IsNullOrEmpty(userBook.Book?.CoverUrl))
                                    {
                                        <img src="@userBook.Book.CoverUrl" alt="@userBook.Book.Title" class="book-cover-img">
                                    }
                                    else
                                    {
                                        <div class="placeholder-cover">
                                            <i class="bi bi-book"></i>
                                            <span>@userBook.Book?.Title</span>
                                        </div>
                                    }
                                    
                                    <!-- Status Dropdown -->
                                    <div class="status-dropdown">
                                        <select class="form-select form-select-sm status-select" 
                                                data-book-id="@userBook.BookId" 
                                                data-current-status="@userBook.Status"
                                                onchange="updateBookStatus(this)">
                                            @{
                                                var statuses = new[] { 
                                                    new { Value = "Want to Read", Display = "üìö Want to Read" },
                                                    new { Value = "Reading", Display = "üìñ Reading" },
                                                    new { Value = "Read", Display = "‚úÖ Read" }
                                                };
                                            }
                                            @foreach(var status in statuses)
                                            {
                                                if(userBook.Status == status.Value)
                                                {
                                                    <option value="@status.Value" selected>@status.Display</option>
                                                }
                                                else
                                                {
                                                    <option value="@status.Value">@status.Display</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    
                                    <!-- Ownership Type Dropdown -->
                                    <div class="ownership-dropdown">
                                        <select class="form-select form-select-sm ownership-select" 
                                                data-book-id="@userBook.BookId" 
                                                data-current-ownership="@userBook.OwnershipType"
                                                onchange="updateOwnershipType(this)">
                                            @{
                                                var ownershipTypes = new[] { 
                                                    new { Value = "Physical", Display = "üìö Physical" },
                                                    new { Value = "Digital", Display = "üíª Digital" },
                                                    new { Value = "Wishlist", Display = "‚ù§Ô∏è Wishlist" }
                                                };
                                            }
                                            @foreach(var ownership in ownershipTypes)
                                            {
                                                if(userBook.OwnershipType == ownership.Value)
                                                {
                                                    <option value="@ownership.Value" selected>@ownership.Display</option>
                                                }
                                                else
                                                {
                                                    <option value="@ownership.Value">@ownership.Display</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <!-- Book Info -->
                                <div class="book-info">
                                    <h5 class="book-title">@userBook.Book?.Title</h5>
                                    <p class="book-author">by @userBook.Book?.Author</p>
                                    
                                    @if (!string.IsNullOrEmpty(userBook.Book?.Genre))
                                    {
                                        <span class="book-genre">@userBook.Book.Genre</span>
                                    }

                                    <!-- Rating -->
                                    @if (userBook.Rating.HasValue)
                                    {
                                        <div class="book-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= userBook.Rating.Value ? "-fill" : "") star"></i>
                                            }
                                        </div>
                                    }

                                    <!-- Date Added -->
                                    <small class="text-muted">
                                        Added @userBook.DateAdded.ToString("MMM dd, yyyy")
                                    </small>
                                </div>

                                <!-- Book Actions -->
                                <div class="book-actions">
                                    <button class="btn btn-outline-primary btn-sm me-2" onclick="viewBookDetails(@userBook.BookId)">
                                        <i class="bi bi-eye me-1"></i>
                                        View Details
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm" onclick="removeFromBookshelf(@userBook.BookId, '@userBook.Book?.Title')">
                                        <i class="bi bi-trash me-1"></i>
                                        Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="empty-bookshelf">
                <div class="text-center py-5">
                    <i class="bi bi-bookshelf display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">Your bookshelf is empty</h3>
                    <p class="text-muted">Start building your personal library by adding some books!</p>
                    <a href="/Books" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-lg me-2"></i>
                        Browse & Add Books
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Book Details Modal -->
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookDetailsModalLabel">Book Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="bookDetailsBody">
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editBookBtn" style="display: none;">Edit Notes</button>
            </div>
        </div>
    </div>
</div>

