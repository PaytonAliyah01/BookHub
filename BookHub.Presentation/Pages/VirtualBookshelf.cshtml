@section Scripts {
    <script>
        function updateBookStatus(selectElement) {
            const bookId = selectElement.dataset.bookId;
            const newStatus = selectElement.value;
            const originalStatus = selectElement.dataset.currentStatus;
            
            // Show loading state
            selectElement.disabled = true;
            selectElement.style.opacity = '0.6';
            
            // Create form data
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('newStatus', newStatus);
            
            // Get anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            
            // Make request
            fetch('/VirtualBookshelf?handler=UpdateStatus', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update the current status
                    selectElement.dataset.currentStatus = newStatus;
                    showToast('Success', data.message, 'success');
                    
                    // Refresh the page to update statistics
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    // Revert selection
                    selectElement.value = originalStatus;
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Revert selection
                selectElement.value = originalStatus;
                showToast('Error', 'Failed to update status', 'error');
            })
            .finally(() => {
                // Reset loading state
                selectElement.disabled = false;
                selectElement.style.opacity = '1';
            });
        }
        
        function updateOwnershipType(selectElement) {
            const bookId = selectElement.dataset.bookId;
            const newOwnershipType = selectElement.value;
            const originalOwnershipType = selectElement.dataset.currentOwnership;
            
            // Show loading state
            selectElement.disabled = true;
            selectElement.style.opacity = '0.6';
            
            // Create form data
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('newOwnershipType', newOwnershipType);
            
            // Get anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            
            // Make request
            fetch('/VirtualBookshelf?handler=UpdateOwnership', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update the current ownership type
                    selectElement.dataset.currentOwnership = newOwnershipType;
                    showToast('Success', data.message, 'success');
                    
                    // Refresh the page to update statistics
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    // Revert selection
                    selectElement.value = originalOwnershipType;
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Revert selection
                selectElement.value = originalOwnershipType;
                showToast('Error', 'Failed to update ownership type', 'error');
            })
            .finally(() => {
                // Reset loading state
                selectElement.disabled = false;
                selectElement.style.opacity = '1';
            });
        }
        
        function showToast(title, message, type = 'success') {
            // Create toast notification
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            
            const toastId = 'toast-' + Date.now();
            const bgClass = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-info';
            const icon = type === 'success' ? 'bi-check-circle' : type === 'error' ? 'bi-exclamation-triangle' : 'bi-info-circle';
            
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi ${icon} me-2"></i><strong>${title}:</strong> ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            
            // Show toast
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 3000 });
            toast.show();
            
            // Remove from DOM after hiding
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
        
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
            return container;
        }
        
        function viewBookDetails(bookId) {
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('bookDetailsModal'));
            modal.show();
            
            // Reset modal content
            document.getElementById('bookDetailsBody').innerHTML = `
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;
            
            // Fetch book details
            fetch(`/VirtualBookshelf?handler=BookDetails&bookId=${bookId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        renderBookDetails(data.book, data.userBook);
                    } else {
                        showErrorInModal(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showErrorInModal('Failed to load book details');
                });
        }
        
        function renderBookDetails(book, userBook) {
            const modalBody = document.getElementById('bookDetailsBody');
            const coverImage = book.coverUrl && book.coverUrl.trim() !== '' 
                ? `<img src="${book.coverUrl}" alt="${book.title}" class="img-fluid rounded shadow" style="max-height: 300px;">` 
                : `<div class="bg-light rounded d-flex align-items-center justify-content-center shadow" style="width: 200px; height: 300px;"><i class="bi bi-book text-muted" style="font-size: 3rem;"></i></div>`;
            
            const userInfo = userBook ? `
                <div class="row mt-4">
                    <div class="col-12">
                        <h5><i class="bi bi-person-circle me-2"></i>My Reading Info</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Status:</strong> <span class="badge bg-primary">${userBook.status}</span></p>
                                        <p><strong>Ownership:</strong> <span class="badge bg-success">${userBook.ownershipType}</span></p>
                                        <p><strong>Added:</strong> ${new Date(userBook.dateAdded).toLocaleDateString()}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Rating:</strong> ${userBook.rating ? '‚≠ê'.repeat(userBook.rating) + ` (${userBook.rating}/5)` : 'Not rated'}</p>
                                        <p><strong>Notes:</strong></p>
                                        <div class="border rounded p-2" style="min-height: 60px; background: white;">
                                            ${userBook.notes || '<em class="text-muted">No notes added</em>'}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ` : '';
            
            modalBody.innerHTML = `
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        ${coverImage}
                    </div>
                    <div class="col-md-8">
                        <h4 class="text-primary">${book.title}</h4>
                        <p class="text-muted mb-2"><i class="bi bi-person-fill me-1"></i><strong>Author:</strong> ${book.author}</p>
                        <p class="text-muted mb-2"><i class="bi bi-bookmark-fill me-1"></i><strong>Genre:</strong> ${book.genre}</p>
                        ${book.isbn ? `<p class="text-muted mb-2"><i class="bi bi-upc-scan me-1"></i><strong>ISBN:</strong> ${book.isbn}</p>` : ''}
                        <p class="text-muted mb-3"><i class="bi bi-calendar-fill me-1"></i><strong>Added to Library:</strong> ${new Date(book.createdDate).toLocaleDateString()}</p>
                        
                        ${book.description ? `
                            <div class="mt-3">
                                <h6><i class="bi bi-card-text me-1"></i>Description</h6>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-0">${book.description}</p>
                                </div>
                            </div>
                        ` : ''}
                    </div>
                </div>
                ${userInfo}
            `;
            
            document.getElementById('bookDetailsModalLabel').textContent = book.title;
        }
        
        function showErrorInModal(message) {
            document.getElementById('bookDetailsBody').innerHTML = `
                <div class="text-center py-4">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Error Loading Details</h5>
                    <p class="text-muted">${message}</p>
                </div>
            `;
        }

        function removeFromBookshelf(bookId, bookTitle) {
            // Enhanced confirmation dialog
            const confirmed = confirm(
                `üóëÔ∏è Remove from Bookshelf\\n\\n` +
                `Are you sure you want to remove "${bookTitle}" from your bookshelf?\\n\\n` +
                `This action cannot be undone. The book will be completely removed from your collection.`
            );
            
            if (confirmed) {
                // Create form data
                const formData = new FormData();
                formData.append('bookId', bookId);
                
                // Get anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    formData.append('__RequestVerificationToken', token.value);
                }
                
                // Show loading state
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.disabled = true;
                button.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Removing...';
                
                // Make request
                fetch('/VirtualBookshelf?handler=RemoveFromBookshelf', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Success', `"${bookTitle}" has been removed from your bookshelf`, 'success');
                        
                        // Remove the book card from the UI with animation
                        const bookCard = button.closest('.user-book-card');
                        if (bookCard) {
                            bookCard.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                            bookCard.style.opacity = '0';
                            bookCard.style.transform = 'scale(0.8)';
                            
                            setTimeout(() => {
                                bookCard.remove();
                                // Check if there are no more books
                                const remainingBooks = document.querySelectorAll('.user-book-card');
                                if (remainingBooks.length === 0) {
                                    // Refresh page to show "no books" message and update stats
                                    window.location.reload();
                                }
                            }, 300);
                            
                            // Update statistics without full page reload if possible
                            setTimeout(() => {
                                updateBookshelfStats();
                            }, 500);
                        } else {
                            // Fallback: refresh page
                            setTimeout(() => window.location.reload(), 1000);
                        }
                    } else {
                        showToast('Error', data.message, 'error');
                        // Reset button
                        button.disabled = false;
                        button.innerHTML = originalText;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Error', 'Failed to remove book from bookshelf', 'error');
                    // Reset button
                    button.disabled = false;
                    button.innerHTML = originalText;
                });
            }
        }
        
        function updateBookshelfStats() {
            // Optional: Update statistics without full page reload
            // This could fetch updated stats via AJAX if needed
            // For now, we'll do a simple refresh after a delay
            setTimeout(() => window.location.reload(), 2000);
        }
    </script>
