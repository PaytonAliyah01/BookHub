@page
@model BookHub.Presentation.Pages.BookReviewsModel
@{
    ViewData["Title"] = $"Reviews - {Model.Book?.Title}";
}

<div class="container mt-4">
    <!-- Book Header -->
    @if (Model.Book != null)
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="book-cover-container">
                    @{
                        var coverPath = "";
                        var extensions = new[] { "jpg", "jpeg", "png", "webp" };
                        foreach (var ext in extensions)
                        {
                            var testPath = $"~/images/book_{Model.Book.BookId}.{ext}";
                            var physicalPath = System.IO.Path.Combine("wwwroot", testPath.TrimStart('~', '/'));
                            if (System.IO.File.Exists(physicalPath))
                            {
                                coverPath = testPath;
                                break;
                            }
                        }
                    }
                    
                    @if (!string.IsNullOrEmpty(coverPath))
                    {
                        <img src="@coverPath" alt="@Model.Book.Title" class="img-fluid book-cover" />
                    }
                    else
                    {
                        <div class="book-cover-placeholder">
                            <div class="cover-content">
                                <h6>@Model.Book.Title</h6>
                                <small>@Model.Book.Author</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-9">
                <h1>@Model.Book.Title</h1>
                <p class="lead">by @Model.Book.Author</p>
                @if (!string.IsNullOrEmpty(Model.Book.Description))
                {
                    <p class="text-muted">@Model.Book.Description</p>
                }
                
                <!-- Rating Summary -->
                <div class="rating-summary mb-3">
                    @if (Model.ReviewCount > 0)
                    {
                        <div class="d-flex align-items-center">
                            <div class="star-rating me-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    @if (i <= Math.Round(Model.AverageRating))
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted"></i>
                                    }
                                }
                            </div>
                            <span class="me-2"><strong>@Model.AverageRating.ToString("F1")</strong> out of 5</span>
                            <span class="text-muted">(@Model.ReviewCount review@(Model.ReviewCount != 1 ? "s" : ""))</span>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No reviews yet. Be the first to review this book!</p>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <!-- Add/Edit Review Section -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>@(Model.UserReview != null ? "Edit Your Review" : "Write a Review")</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="@(Model.UserReview != null ? "UpdateReview" : "AddReview")">
                            <input type="hidden" asp-for="BookId" value="@Model.BookId" />
                            @if (Model.UserReview != null)
                            {
                                <input type="hidden" asp-for="NewReview.ReviewId" value="@Model.UserReview.ReviewId" />
                            }
                            
                            <div class="mb-3">
                                <label asp-for="NewReview.Rating" class="form-label">Rating</label>
                                <div class="star-input">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <input type="radio" asp-for="NewReview.Rating" value="@i" id="star-@i" />
                                        <label for="star-@i" class="star-label">
                                            <i class="fas fa-star"></i>
                                        </label>
                                    }
                                </div>
                                <span asp-validation-for="NewReview.Rating" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewReview.ReviewTitle" class="form-label">Review Title</label>
                                <input asp-for="NewReview.ReviewTitle" class="form-control" value="@(Model.UserReview?.ReviewTitle ?? "")" required />
                                <span asp-validation-for="NewReview.ReviewTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewReview.ReviewText" class="form-label">Your Review</label>
                                <textarea asp-for="NewReview.ReviewText" class="form-control" rows="4" required>@(Model.UserReview?.ReviewText ?? "")</textarea>
                                <span asp-validation-for="NewReview.ReviewText" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                @{
                                    var isChecked = Model.UserReview?.IsRecommended == true;
                                }
                                <input asp-for="NewReview.IsRecommended" type="checkbox" class="form-check-input" id="isRecommended" 
                                       checked="@isChecked" />
                                <label class="form-check-label" for="isRecommended">
                                    I recommend this book
                                </label>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    @(Model.UserReview != null ? "Update Review" : "Submit Review")
                                </button>
                                @if (Model.UserReview != null)
                                {
                                    <button type="submit" asp-page-handler="DeleteReview" asp-route-reviewId="@Model.UserReview.ReviewId" 
                                            class="btn btn-outline-danger" 
                                            onclick="return confirm('Are you sure you want to delete your review?')">
                                        Delete Review
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a href="/Login">Login</a> to write a review for this book.
                </div>
            }

            <!-- Reviews List -->
            <div class="reviews-section">
                <h3>Reviews (@Model.ReviewCount)</h3>
                
                @if (Model.Reviews.Any())
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-3 review-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 class="card-title mb-1">@review.ReviewTitle</h5>
                                        <div class="star-rating mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                @if (i <= review.Rating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-muted"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    @if (review.IsRecommended)
                                    {
                                        <span class="badge bg-success">Recommended</span>
                                    }
                                </div>
                                
                                <p class="card-text">@review.ReviewText</p>
                                
                                <div class="review-meta text-muted small">
                                    <span>by @review.Username</span>
                                    <span class="ms-2">@review.ReviewDate.ToString("MMMM d, yyyy")</span>
                                    @if (review.LastModified.HasValue)
                                    {
                                        <span class="ms-2">(edited @review.LastModified.Value.ToString("MMMM d, yyyy"))</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No reviews yet for this book.</p>
                }
            </div>
        </div>

        <div class="col-md-4">
            <!-- Sidebar with book info or related books -->
            <div class="card">
                <div class="card-header">
                    <h5>Book Information</h5>
                </div>
                <div class="card-body">
                    @if (Model.Book != null)
                    {
                        <dl class="row">
                            @if (!string.IsNullOrEmpty(Model.Book.Genre))
                            {
                                <dt class="col-sm-4">Genre:</dt>
                                <dd class="col-sm-8">@Model.Book.Genre</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Book.ISBN))
                            {
                                <dt class="col-sm-4">ISBN:</dt>
                                <dd class="col-sm-8">@Model.Book.ISBN</dd>
                            }
                        </dl>
                    }
                    <a href="/Books" class="btn btn-outline-primary">‚Üê Back to Books</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .book-cover-container {
        height: 280px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .book-cover {
        max-height: 100%;
        max-width: 100%;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .book-cover-placeholder {
        width: 180px;
        height: 280px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .star-rating .fa-star {
        font-size: 1.2em;
    }

    .star-input {
        display: flex;
        direction: row-reverse;
        justify-content: flex-end;
        margin-bottom: 10px;
    }

    .star-input input[type="radio"] {
        display: none;
    }

    .star-label {
        font-size: 1.5em;
        color: #ccc;
        cursor: pointer;
        margin: 0 2px;
    }

    .star-input input[type="radio"]:checked ~ .star-label,
    .star-input .star-label:hover,
    .star-input .star-label:hover ~ .star-label {
        color: #ffc107;
    }

    .review-card {
        border-left: 4px solid #007bff;
    }

    .rating-summary {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enhanced star rating interaction
        document.querySelectorAll('.star-input input[type="radio"]').forEach(input => {
            input.addEventListener('change', function() {
                const rating = this.value;
                const container = this.closest('.star-input');
                const stars = container.querySelectorAll('.star-label i');
                
                stars.forEach((star, index) => {
                    if (index < rating) {
                        star.className = 'fas fa-star';
                    } else {
                        star.className = 'far fa-star';
                    }
                });
            });
        });

        // Set initial star rating if editing
        @if (Model.UserReview != null)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                const ratingValue = @Model.UserReview.Rating;
                const ratingInput = document.querySelector(`input[name="NewReview.Rating"][value="${ratingValue}"]`);
                if (ratingInput) {
                    ratingInput.checked = true;
                    ratingInput.dispatchEvent(new Event('change'));
                }
            });
            </text>
        }
    </script>
}