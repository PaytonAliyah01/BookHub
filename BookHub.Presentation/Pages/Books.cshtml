@page
@model BookHub.Presentation.Pages.BooksModel
@{
    ViewData["Title"] = "Browse Books";
}

<!-- Hidden form for anti-forgery token -->
<form style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="books-container">
    <div class="container-fluid">
        <div class="books-header">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="books-title">
                    <i class="bi bi-book me-2"></i>
                    Browse Books
                </h2>
                
                <div class="books-controls">
                    <!-- Reading Goal Progress (if logged in) -->
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (Model.CurrentGoal != null)
                        {
                            <div class="reading-progress-mini me-3">
                                <div class="card border-primary" style="width: 200px;">
                                    <div class="card-body p-2">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-muted">@DateTime.Now.Year Goal</small>
                                            <span class="badge bg-primary">@Model.CurrentGoal.BooksRead/@Model.CurrentGoal.TargetBooks</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-primary" style="width: @Math.Min(100, Model.CurrentGoal.ProgressPercentage)%"></div>
                                        </div>
                                        <div class="text-center mt-1">
                                            <a href="/ReadingGoals" class="btn btn-sm btn-outline-primary">View Goals</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="reading-progress-mini me-3">
                                <div class="card border-secondary" style="width: 200px;">
                                    <div class="card-body p-2 text-center">
                                        <small class="text-muted">No reading goal set</small>
                                        <div class="mt-1">
                                            <a href="/ReadingGoals" class="btn btn-sm btn-outline-secondary">Set Goal</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    
                    <!-- All Reviews Link -->
                    <a href="/AllReviews" class="btn btn-info me-3">
                        <i class="bi bi-chat-square-text me-1"></i>
                        All Reviews
                    </a>
                    
                    <!-- View Toggle -->
                    <div class="btn-group me-3" role="group" aria-label="View toggle">
                        <button type="button" class="btn btn-outline-primary active" id="gridView">
                            <i class="bi bi-grid-3x3-gap"></i> Grid
                        </button>
                        <button type="button" class="btn btn-outline-primary" id="shelfView">
                            <i class="bi bi-list"></i> List
                        </button>
                    </div>
                    
                    <!-- Search Existing Books -->
                    <div class="search-container">
                        <input type="text" class="form-control" id="bookSearch" placeholder="Search your books..." style="width: 200px;">
                    </div>
            </div>
        </div>
        
        <!-- Filters -->
        <div class="books-filters mb-4">
            <div class="row">
                <div class="col-md-3">
                    <select class="form-select" id="authorFilter">
                        <option value="">All Authors</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="genreFilter">
                        <option value="">All Genres</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="sortBy">
                        <option value="title">Sort by Title</option>
                        <option value="author">Sort by Author</option>
                        <option value="genre">Sort by Genre</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-outline-secondary btn-sm" id="clearFilters">
                        <i class="bi bi-arrow-clockwise"></i> Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Message Display -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="container-fluid">
            <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                <i class="bi @(Model.IsSuccess ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                @Model.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <!-- Login prompt for non-authenticated users -->
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="container-fluid">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Browse our book collection!</strong> 
                <a href="/Login" class="alert-link">Sign in</a> or 
                <a href="/Register" class="alert-link">create an account</a> 
                to add books to your personal bookshelf.
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (!Model.Books.Any())
    {
        <div class="empty-books">
            <div class="text-center py-5">
                <i class="bi bi-book display-1 text-muted"></i>
                <h3 class="mt-3 text-muted">No books found</h3>
                <p class="text-muted">Check back later for new book additions!</p>
            </div>
        </div>
    }
    else
    {
        <!-- Grid View -->
        <div id="gridViewContainer" class="books-grid">
            <div class="row g-4" id="booksContainer">
                @foreach (var book in Model.Books)
                {
                    <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-12 book-item" 
                         data-title="@book.Title.ToLower()" 
                         data-author="@book.Author.ToLower()" 
                         data-genre="@book.Genre.ToLower()">
                        <div class="simple-book-card">
                            <!-- Local Cover System -->
                            <div style="width: 100%; height: 250px; position: relative; border-radius: 8px; overflow: hidden; margin-bottom: 15px;">
                                @{
                                    // Check for manual uploaded covers in multiple formats
                                    var coverFileName = $"book_{book.BookId}";
                                    var possibleExtensions = new[] { ".jpg", ".jpeg", ".png", ".webp" };
                                    var localCoverPath = "";
                                    var hasLocalCover = false;
                                    
                                    foreach (var ext in possibleExtensions)
                                    {
                                        var testPath = $"wwwroot/images/{coverFileName}{ext}";
                                        if (System.IO.File.Exists(testPath))
                                        {
                                            localCoverPath = $"/images/{coverFileName}{ext}";
                                            hasLocalCover = true;
                                            break;
                                        }
                                    }
                                    
                                    // Also check with clean title as filename
                                    if (!hasLocalCover)
                                    {
                                        var cleanTitle = System.Text.RegularExpressions.Regex.Replace(book.Title, @"[^\w\s-]", "").Replace(" ", "_").ToLower();
                                        foreach (var ext in possibleExtensions)
                                        {
                                            var testPath = $"wwwroot/images/{cleanTitle}{ext}";
                                            if (System.IO.File.Exists(testPath))
                                            {
                                                localCoverPath = $"/images/{cleanTitle}{ext}";
                                                hasLocalCover = true;
                                                break;
                                            }
                                        }
                                    }
                                }
                                
                                @if (hasLocalCover)
                                {
                                    <!-- Your uploaded cover -->
                                    <img src="@localCoverPath" 
                                         alt="@book.Title cover" 
                                         style="position: absolute; 
                                                top: 0; 
                                                left: 0; 
                                                width: 100%; 
                                                height: 100%; 
                                                object-fit: cover; 
                                                border-radius: 8px;">
                                }
                                else
                                {
                                    <!-- Gradient fallback for books without uploaded covers -->
                                    <div style="position: absolute; 
                                         top: 0; 
                                         left: 0; 
                                         width: 100%; 
                                         height: 100%; 
                                         background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                                         border-radius: 8px; 
                                         display: flex; 
                                         flex-direction: column; 
                                         align-items: center; 
                                         justify-content: center; 
                                         color: white; 
                                         text-align: center; 
                                         padding: 20px;">
                                        <h4 style="color: white; font-size: 14px; margin: 5px 0; line-height: 1.3;">@book.Title</h4>
                                        <p style="color: rgba(255,255,255,0.8); font-size: 11px; margin: 3px 0;">@book.Author</p>
                                        <span style="color: rgba(255,255,255,0.6); font-size: 9px; text-transform: uppercase;">@book.Genre</span>
                                    </div>
                                }
                            </div>
                            
                            <div class="book-info">
                                <h6 class="book-title" title="@book.Title">@book.Title</h6>
                                <p class="book-author">by @book.Author</p>
                                <div class="book-meta">
                                    @if (!string.IsNullOrEmpty(book.Genre))
                                    {
                                        <span class="book-genre">@book.Genre</span>
                                    }
                                    @if (!string.IsNullOrEmpty(book.ISBN))
                                    {
                                        <small class="text-muted d-block mt-1">ISBN: @book.ISBN</small>
                                    }
                                </div>
                                
                                <!-- Book Rating Display -->
                                @{
                                    var hasRating = Model.BookRatings.ContainsKey(book.BookId);
                                    var ratingData = hasRating ? Model.BookRatings[book.BookId] : (0.0, 0);
                                }
                                @if (hasRating && ratingData.Item2 > 0)
                                {
                                    <div class="book-rating mt-2">
                                        <div class="d-flex align-items-center">
                                            <div class="star-rating-small me-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    @if (i <= Math.Round(ratingData.Item1))
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted"></i>
                                                    }
                                                }
                                            </div>
                                            <small class="text-muted">
                                                @ratingData.Item1.ToString("F1") (@ratingData.Item2 review@(ratingData.Item2 != 1 ? "s" : ""))
                                            </small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="book-rating mt-2">
                                        <small class="text-muted">No reviews yet</small>
                                    </div>
                                }
                                
                                <!-- Book Description Preview -->
                                @if (!string.IsNullOrEmpty(book.Description))
                                {
                                    <div class="book-description-preview mt-2">
                                        <p class="text-muted small mb-2" style="line-height: 1.4; font-size: 0.85em;">
                                            @(book.Description.Length > 120 ? book.Description.Substring(0, 120).Trim() + "..." : book.Description)
                                        </p>
                                    </div>
                                }
                                
                                <!-- Individual Book Actions -->
                                <div class="book-actions mt-3">
                                    <button class="btn btn-success btn-sm add-to-bookshelf-btn" 
                                            data-book-id="@book.BookId"
                                            data-book-title="@book.Title"
                                            data-book-author="@book.Author">
                                        <i class="bi bi-bookmark-plus me-1"></i>
                                        Add to Shelf
                                    </button>
                                    @if (User.Identity?.IsAuthenticated ?? false)
                                    {
                                        <button class="btn btn-primary btn-sm ms-1 mark-as-read-btn"
                                                data-book-id="@book.BookId"
                                                data-book-title="@book.Title"
                                                title="Mark as read & update reading goal progress">
                                            <i class="fas fa-check me-1"></i>
                                            Mark Read
                                        </button>
                                    }
                                    <button class="btn btn-outline-primary btn-sm ms-1 view-details-btn"
                                            data-book-id="@book.BookId"
                                            data-bs-toggle="modal" 
                                            data-bs-target="#bookDetailsModal">
                                        <i class="bi bi-eye me-1"></i>
                                        View
                                    </button>
                                    <a href="/BookReviews?bookId=@book.BookId" class="btn btn-outline-secondary btn-sm ms-1">
                                        <i class="bi bi-star me-1"></i>
                                        Reviews
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- List View -->
        <div id="shelfViewContainer" class="books-list" style="display: none;">
            @foreach (var book in Model.Books)
            {
                <div class="book-list-item" 
                     data-title="@book.Title.ToLower()" 
                     data-author="@book.Author.ToLower()" 
                     data-genre="@book.Genre.ToLower()">
                    <div class="book-list-item-content">
                        <!-- Book Cover for List View -->
                        <div class="book-list-cover-container">
                            <div class="book-list-cover-wrapper">
                                <img data-book-title="@book.Title" 
                                     data-book-author="@book.Author" 
                                     data-book-isbn="@book.ISBN" 
                                     alt="@book.Title" 
                                     class="book-list-cover-image smart-cover-small" 
                                     loading="lazy">
                                <div class="generated-book-cover-small" data-genre="@book.Genre" style="display: flex;">
                                    <div class="cover-content-small">
                                        <div class="cover-title-small">@(book.Title.Length > 20 ? book.Title.Substring(0, 20) + "..." : book.Title)</div>
                                        <div class="cover-author-small">@(book.Author.Length > 15 ? book.Author.Substring(0, 15) + "..." : book.Author)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    <div class="book-list-details">
                        <h5 class="book-list-title">@book.Title</h5>
                        <p class="book-list-author mb-2">by @book.Author</p>
                        <div class="book-list-meta">
                            @if (!string.IsNullOrEmpty(book.Genre))
                            {
                                <span class="badge bg-primary me-2">@book.Genre</span>
                            }
                            @if (!string.IsNullOrEmpty(book.ISBN))
                            {
                                <small class="text-muted">ISBN: @book.ISBN</small>
                            }
                        </div>
                        
                        <!-- Book Rating Display for List View -->
                        @{
                            var hasRatingList = Model.BookRatings.ContainsKey(book.BookId);
                            var ratingDataList = hasRatingList ? Model.BookRatings[book.BookId] : (0.0, 0);
                        }
                        @if (hasRatingList && ratingDataList.Item2 > 0)
                        {
                            <div class="book-rating mt-2">
                                <div class="d-flex align-items-center">
                                    <div class="star-rating-small me-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= Math.Round(ratingDataList.Item1))
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                    </div>
                                    <small class="text-muted">
                                        @ratingDataList.Item1.ToString("F1") (@ratingDataList.Item2 review@(ratingDataList.Item2 != 1 ? "s" : ""))
                                    </small>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="book-rating mt-2">
                                <small class="text-muted">No reviews yet</small>
                            </div>
                        }
                        
                        <!-- Book Description Preview for List View -->
                        @if (!string.IsNullOrEmpty(book.Description))
                        {
                            <div class="book-description-preview mt-2">
                                <p class="text-muted mb-2" style="line-height: 1.5; font-size: 0.9em;">
                                    @(book.Description.Length > 150 ? book.Description.Substring(0, 150).Trim() + "..." : book.Description)
                                </p>
                            </div>
                        }
                        
                        <!-- Individual Book Actions for List View -->
                        <div class="book-list-actions mt-3">
                            <button class="btn btn-success btn-sm add-to-bookshelf-btn me-2" 
                                    data-book-id="@book.BookId"
                                    data-book-title="@book.Title"
                                    data-book-author="@book.Author">
                                <i class="bi bi-bookmark-plus me-1"></i>
                                Add to Shelf
                            </button>
                            <button class="btn btn-outline-primary btn-sm view-details-btn me-2"
                                    data-book-id="@book.BookId"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#bookDetailsModal">
                                <i class="bi bi-eye me-1"></i>
                                View Details
                            </button>
                            <a href="/BookReviews?bookId=@book.BookId" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-star me-1"></i>
                                Reviews
                            </a>
                        </div>
                    </div>
                    </div>
                </div>
            }
        </div>
    }
    </div>
</div>

<!-- Book Details Modal -->
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookDetailsModalLabel">Book Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="bookDetailsContent">
                <!-- Content will be loaded dynamically -->
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bookshelf.js"></script>
    <script>
        // Cache for successful and failed cover URLs to improve performance
        const coverCache = {
            successful: new Map(),
            failed: new Set()
        };
        
        // Simple setup without complex validation
        document.addEventListener('DOMContentLoaded', function() {
            try {
                console.log('ðŸ“š BookHub: Page loaded, initializing...');
                setupBookActions();
                console.log('âœ… Using manually uploaded covers from /images/ folder');
            } catch (error) {
                console.error('Setup error:', error);
            }
        });
        
        function initializeSmartCovers() {
            const smartCovers = document.querySelectorAll('.smart-cover, .smart-cover-small');
            let loadedCount = 0;
            const totalCovers = smartCovers.length;
            
            console.log(`ðŸš€ Starting aggressive cover loading for ${totalCovers} books...`);
            
            // Process all books immediately, no staggering - we want all covers NOW!
            smartCovers.forEach((img, index) => {
                const title = img.dataset.bookTitle || img.getAttribute('data-book-title');
                const author = img.dataset.bookAuthor || img.getAttribute('data-book-author'); 
                const isbn = img.dataset.bookIsbn || img.getAttribute('data-book-isbn');
                
                console.log(`ðŸ“– Processing book: "${title}" by ${author}, ISBN: ${isbn}`);
                
                // Start loading immediately for all books
                loadBookCoverWithFallbacks(img, title, author, isbn).then(() => {
                    loadedCount++;
                    if (loadedCount % 10 === 0 || loadedCount === totalCovers) {
                        console.log(`ðŸ“Š Progress: ${loadedCount}/${totalCovers} covers processed`);
                    }
                    if (loadedCount === totalCovers) {
                        console.log(`ðŸŽ‰ All covers processed! ${totalCovers} books complete.`);
                    }
                }).catch(error => {
                    console.error(`âŒ Error loading cover for "${title}":`, error);
                    loadedCount++;
                    // Ensure fallback is shown
                    img.style.display = 'none';
                    const fallback = img.nextElementSibling;
                    if (fallback) fallback.style.display = 'flex';
                });
            });
            
            // Enhanced global error handler
            document.addEventListener('error', function(event) {
                if (event.target.tagName === 'IMG' && (event.target.classList.contains('smart-cover') || event.target.classList.contains('smart-cover-small'))) {
                    console.log(`ðŸ”„ Image load failed, showing generated cover for: ${event.target.dataset.bookTitle || event.target.getAttribute('data-book-title')}`);
                    event.target.style.display = 'none';
                    const fallback = event.target.nextElementSibling;
                    if (fallback) {
                        fallback.style.display = 'flex';
                    }
                }
            }, true);
        }
        
        // Note: Using new simplified cover loading system above
        
        function setupBookActions() {
            // Add to Bookshelf button clicks
            document.querySelectorAll('.add-to-bookshelf-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const bookId = this.dataset.bookId;
                    const bookTitle = this.dataset.bookTitle;
                    const bookAuthor = this.dataset.bookAuthor;
                    
                    addToBookshelf(bookId, bookTitle, bookAuthor, this);
                });
            });
            
            // View Details button clicks
            document.querySelectorAll('.view-details-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const bookId = this.dataset.bookId;
                    loadBookDetails(bookId);
                });
            });
        }
        
        function addToBookshelf(bookId, title, author, buttonElement) {
            // Change button state
            const originalHTML = buttonElement.innerHTML;
            buttonElement.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Adding...';
            buttonElement.disabled = true;
            
            // Create form data
            const formData = new FormData();
            formData.append('bookId', bookId);
            
            // Get anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            
            // Make actual POST request to server
            fetch('/Books?handler=AddToBookshelf', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                console.log('Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('Response data:', data);
                if (data.success) {
                    // Success state
                    buttonElement.innerHTML = '<i class="bi bi-check-circle me-1"></i>Added!';
                    buttonElement.classList.remove('btn-success');
                    buttonElement.classList.add('btn-outline-success');
                    
                    // Show success toast
                    showToast('Success!', data.message, 'success');
                    
                    // Reset button after 3 seconds
                    setTimeout(() => {
                        buttonElement.innerHTML = originalHTML;
                        buttonElement.classList.remove('btn-outline-success');
                        buttonElement.classList.add('btn-success');
                        buttonElement.disabled = false;
                    }, 3000);
                } else {
                    // Check if login is required
                    if (data.requireLogin) {
                        // Show login required message briefly
                        buttonElement.innerHTML = '<i class="bi bi-person-plus me-1"></i>Login Required';
                        buttonElement.classList.remove('btn-success');
                        buttonElement.classList.add('btn-outline-warning');
                        
                        // Simple confirm dialog - no complex modal logic
                        setTimeout(() => {
                            const shouldLogin = confirm('You need to sign in to add books to your bookshelf.\n\nWould you like to go to the login page now?');
                            
                            if (shouldLogin) {
                                window.location.href = '/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                            } else {
                                // Reset button if user chooses not to login
                                buttonElement.innerHTML = originalHTML;
                                buttonElement.classList.remove('btn-outline-warning');
                                buttonElement.classList.add('btn-success');
                                buttonElement.disabled = false;
                            }
                        }, 100);
                        
                        return;
                    }
                    
                    // Error state
                    buttonElement.innerHTML = '<i class="bi bi-exclamation-triangle me-1"></i>Error';
                    buttonElement.classList.remove('btn-success');
                    buttonElement.classList.add('btn-outline-danger');
                    
                    // Show error toast
                    showToast('Error', data.message, 'error');
                    
                    // Reset button after 3 seconds
                    setTimeout(() => {
                        buttonElement.innerHTML = originalHTML;
                        buttonElement.classList.remove('btn-outline-danger');
                        buttonElement.classList.add('btn-success');
                        buttonElement.disabled = false;
                    }, 3000);
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                // Network error - don't freeze the page
                buttonElement.innerHTML = '<i class="bi bi-exclamation-triangle me-1"></i>Error';
                buttonElement.classList.remove('btn-success');
                buttonElement.classList.add('btn-outline-danger');
                
                showToast('Error', 'Unable to connect to server. Please try again.', 'error');
                
                // Reset button after 3 seconds
                setTimeout(() => {
                    buttonElement.innerHTML = originalHTML;
                    buttonElement.classList.remove('btn-outline-danger');
                    buttonElement.classList.add('btn-success');
                    buttonElement.disabled = false;
                }, 3000);
            });
        }
        
        function loadBookDetails(bookId) {
            const modalContent = document.getElementById('bookDetailsContent');
            
            // Show loading state
            modalContent.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading book details...</p>
                </div>
            `;
            
            // Fetch book details from server
            fetch(`/Books?handler=BookDetails&bookId=${bookId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.book) {
                        const book = data.book;
                        
                        modalContent.innerHTML = `
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    ${book.coverUrl ? 
                                        `<img src="${book.coverUrl}" alt="${book.title}" class="img-fluid rounded" style="max-height: 300px;">` : 
                                        `<div class="placeholder-cover-large d-flex flex-column align-items-center justify-content-center" style="height: 300px; background-color: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 8px;">
                                            <i class="bi bi-book display-4 text-muted"></i>
                                            <p class="mt-2 text-muted">No Cover Available</p>
                                        </div>`
                                    }
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-primary">${book.title}</h4>
                                    <h6 class="text-muted">by ${book.author}</h6>
                                    <hr>
                                    
                                    <div class="mb-3">
                                        <p><strong>Genre:</strong> ${book.genre || 'Not specified'}</p>
                                        ${book.isbn ? `<p><strong>ISBN:</strong> ${book.isbn}</p>` : ''}
                                    </div>
                                    
                                    ${book.description ? `
                                        <div class="mb-3">
                                            <h6><strong>Description:</strong></h6>
                                            <p class="text-justify" style="line-height: 1.6;">${book.description}</p>
                                        </div>
                                    ` : ''}
                                    
                                    <div class="mt-4">
                                        <button class="btn btn-success me-2 add-to-bookshelf-btn" 
                                                data-book-id="${book.bookId}"
                                                data-book-title="${book.title}"
                                                data-book-author="${book.author}">
                                            <i class="bi bi-bookmark-plus me-1"></i>
                                            Add to My Shelf
                                        </button>
                                        <button class="btn btn-outline-primary" onclick="window.open('https://www.google.com/search?q=${encodeURIComponent(book.title + ' ' + book.author + ' book')}&tbm=shop', '_blank')">
                                            <i class="bi bi-search me-1"></i>
                                            Find Online
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        // Re-setup the add to bookshelf button for the modal
                        const modalAddBtn = modalContent.querySelector('.add-to-bookshelf-btn');
                        if (modalAddBtn) {
                            modalAddBtn.addEventListener('click', function() {
                                const bookId = this.dataset.bookId;
                                const bookTitle = this.dataset.bookTitle;
                                const bookAuthor = this.dataset.bookAuthor;
                                addToBookshelf(bookId, bookTitle, bookAuthor, this);
                            });
                        }
                    } else {
                        modalContent.innerHTML = `
                            <div class="text-center text-danger">
                                <i class="bi bi-exclamation-triangle display-4"></i>
                                <h5 class="mt-3">Error Loading Book Details</h5>
                                <p>${data.message || 'Unable to load book information'}</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error loading book details:', error);
                    modalContent.innerHTML = `
                        <div class="text-center text-danger">
                            <i class="bi bi-exclamation-triangle display-4"></i>
                            <h5 class="mt-3">Connection Error</h5>
                            <p>Unable to connect to server. Please try again.</p>
                        </div>
                    `;
                });
        }
        
        function showAlert(type, message, duration = 5000) {
            // Create alert element
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x`;
            alert.style.zIndex = '9999';
            alert.style.marginTop = '20px';
            alert.innerHTML = `
                <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            // Add to page
            document.body.appendChild(alert);
            
            // Auto-remove after duration
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, duration);
        }
        
        function showToast(title, message, type = 'success') {
            // Create toast container if it doesn't exist
            let toastContainer = document.querySelector('.toast-container');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.className = 'toast-container';
                document.body.appendChild(toastContainer);
            }
            
            // Create toast element
            const toastId = 'toast-' + Date.now();
            const toastHTML = `
                <div id="${toastId}" class="toast book-toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHTML);
            
            // Show toast
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            // Remove toast element after it's hidden
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }

        // Mark as Read functionality
        function markAsRead(bookId, title, buttonElement) {
            // Change button state
            const originalHTML = buttonElement.innerHTML;
            buttonElement.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Updating...';
            buttonElement.disabled = true;
            
            // Create form data
            const formData = new FormData();
            formData.append('bookId', bookId);
            
            // Get anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            
            // Make POST request to server
            fetch('/Books?handler=MarkAsRead', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.progressUpdated) {
                        // Show success message with progress info
                        showToast(data.message, 'success');
                        
                        // Update the progress widget if visible
                        updateProgressWidget(data.booksRead, data.targetBooks);
                    } else {
                        showToast(data.message, 'success');
                    }
                    
                    // Change button to indicate book is read
                    buttonElement.innerHTML = '<i class="fas fa-check-circle me-1"></i>Read!';
                    buttonElement.classList.remove('btn-primary');
                    buttonElement.classList.add('btn-success');
                    buttonElement.disabled = true;
                } else {
                    showToast(data.message || 'Failed to mark book as read', 'error');
                    // Restore button
                    buttonElement.innerHTML = originalHTML;
                    buttonElement.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error marking book as read:', error);
                showToast('Error marking book as read', 'error');
                // Restore button
                buttonElement.innerHTML = originalHTML;
                buttonElement.disabled = false;
            });
        }

        function updateProgressWidget(booksRead, targetBooks) {
            // Update the mini progress widget if it exists
            const progressBadge = document.querySelector('.reading-progress-mini .badge');
            const progressBar = document.querySelector('.reading-progress-mini .progress-bar');
            
            if (progressBadge && progressBar) {
                progressBadge.textContent = `${booksRead}/${targetBooks}`;
                const percentage = targetBooks > 0 ? (booksRead / targetBooks) * 100 : 0;
                progressBar.style.width = `${Math.min(100, percentage)}%`;
            }
        }

        // Add event listeners when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Mark as Read button clicks
            document.querySelectorAll('.mark-as-read-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const bookId = this.dataset.bookId;
                    const title = this.dataset.bookTitle;
                    markAsRead(bookId, title, this);
                });
            });
        });
    </script>
