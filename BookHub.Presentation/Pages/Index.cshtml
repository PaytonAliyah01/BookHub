@page
@model BookHub.Presentation.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to BookHub";
    ViewData["Description"] = "Your personal digital library for tracking, reviewing, and discovering books";
}
<section class="hero-section" aria-labelledby="hero-title">
    <div class="container">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="row align-items-center">
                <div class="col-lg-8 text-center text-lg-start">
                    <h1 id="hero-title" class="display-3 fw-bold mb-4">
                        Welcome back to BookHub! 
                        <span class="d-block">??</span>
                    </h1>
                    <p class="lead mb-4 fs-4">
                        Continue your reading journey and discover new worlds of knowledge
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                        <a href="/Books/VirtualBookshelf" class="btn btn-lg btn-primary">
                            <i class="bi bi-bookshelf me-2" aria-hidden="true"></i>
                            My Bookshelf
                        </a>
                        <a href="/Books" class="btn btn-lg btn-outline-primary">
                            <i class="bi bi-search me-2" aria-hidden="true"></i>
                            Discover Books
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 mt-4 mt-lg-0">
                    <div class="bg-white bg-opacity-10 rounded-3 p-4">
                        <partial name="_ReadingGoalWidget" model="Model.CurrentGoal" />
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center">
                <h1 id="hero-title" class="display-3 fw-bold mb-4">
                    Welcome to BookHub
                    <span class="d-block">??</span>
                </h1>
                <p class="lead mb-4 fs-4 mx-auto" style="max-width: 600px;">
                    Your personal digital library for tracking, reviewing, and discovering amazing books
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-5">
                    <a href="/Auth/Register" class="btn btn-lg btn-primary">
                        <i class="bi bi-person-plus me-2" aria-hidden="true"></i>
                        Get Started Free
                    </a>
                    <a href="/Books" class="btn btn-lg btn-outline-primary">
                        <i class="bi bi-book me-2" aria-hidden="true"></i>
                        Browse Books
                    </a>
                </div>
                <div class="row justify-content-center text-start">
                    <div class="col-md-8">
                        <div class="bg-white bg-opacity-10 rounded-3 p-4">
                            <div class="row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <div class="text-center">
                                        <i class="bi bi-bookshelf fs-1 mb-2" aria-hidden="true"></i>
                                        <h6 class="mb-0">Track Your Library</h6>
                                    </div>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <div class="text-center">
                                        <i class="bi bi-graph-up fs-1 mb-2" aria-hidden="true"></i>
                                        <h6 class="mb-0">Monitor Progress</h6>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="text-center">
                                        <i class="bi bi-people fs-1 mb-2" aria-hidden="true"></i>
                                        <h6 class="mb-0">Join Community</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section class="py-5" style="background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);" aria-labelledby="features-title">
    <div class="container">
        <div class="text-center mb-5">
            <h2 id="features-title" class="display-5 fw-bold mb-3">Everything You Need</h2>
            <p class="lead text-muted">Powerful features to enhance your reading experience</p>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-book-fill feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Discover Amazing Books</h4>
                        <p class="card-text text-muted">
                            Explore our vast collection of books across all genres. Find your next great read with our smart search and recommendation system.
                        </p>
                        <a href="/Books" class="btn btn-outline-primary mt-auto">
                            <i class="bi bi-search me-2" aria-hidden="true"></i>
                            Browse Library
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-bookshelf feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Organize Your Library</h4>
                        <p class="card-text text-muted">
                            Keep track of books you want to read, are currently reading, and have completed. Add personal notes and ratings.
                        </p>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Books/VirtualBookshelf" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-bookshelf me-2" aria-hidden="true"></i>
                                My Bookshelf
                            </a>
                        }
                        else
                        {
                            <a href=\"/Auth/Register\" class=\"btn btn-outline-primary mt-auto\">
                                <i class=\"bi bi-person-plus me-2\" aria-hidden=\"true\"></i>
                                Get Started
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-graph-up feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Track Your Progress</h4>
                        <p class="card-text text-muted">
                            Set reading goals, monitor your progress, and get detailed analytics about your reading habits and preferences.
                        </p>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Reading/Analytics" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-bar-chart me-2" aria-hidden="true"></i>
                                View Analytics
                            </a>
                        }
                        else
                        {
                            <a href=\"/Auth/Register\" class=\"btn btn-outline-primary mt-auto\">
                                <i class=\"bi bi-person-plus me-2\" aria-hidden=\"true\"></i>
                                Join Now
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-chat-square-text feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Share Reviews</h4>
                        <p class="card-text text-muted">
                            Write and read book reviews. Share your thoughts and discover what others think about your favorite books.
                        </p>
                        <a href="/Books/AllReviews" class="btn btn-outline-primary mt-auto">
                            <i class="bi bi-chat-dots me-2" aria-hidden="true"></i>
                            Read Reviews
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-people-fill feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Join Book Clubs</h4>
                        <p class="card-text text-muted">
                            Connect with fellow book lovers, join discussions, and participate in reading challenges with our community.
                        </p>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Community/BookClubs" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-people me-2" aria-hidden="true"></i>
                                Explore Clubs
                            </a>
                        }
                        else
                        {
                            <a href="/Auth/Register" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-person-plus me-2" aria-hidden="true"></i>
                                Join Community
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-hover animate-on-scroll">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-target feature-icon mb-3" aria-hidden="true"></i>
                        <h4 class="card-title h5 fw-bold">Set Reading Goals</h4>
                        <p class="card-text text-muted">
                            Challenge yourself with yearly reading goals and track your achievements with detailed progress insights.
                        </p>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/Reading/Goals" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-bullseye me-2" aria-hidden="true"></i>
                                My Goals
                            </a>
                        }
                        else
                        {
                            <a href="/Auth/Register" class="btn btn-outline-primary mt-auto">
                                <i class="bi bi-person-plus me-2" aria-hidden="true"></i>
                                Start Today
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (!(User.Identity?.IsAuthenticated ?? false))
{
    <section class="py-5 bg-primary text-white" aria-labelledby="cta-title">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 id="cta-title" class="display-5 fw-bold mb-4">Ready to Start Your Reading Journey?</h2>
                    <p class="lead mb-4">
                        Join thousands of book lovers who have already transformed their reading experience with BookHub.
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a href="/Auth/Register" class="btn btn-lg btn-light text-primary">
                            <i class="bi bi-person-plus me-2" aria-hidden="true"></i>
                            Create Free Account
                        </a>
                        <a href="/Books" class="btn btn-lg btn-outline-light">
                            <i class="bi bi-book me-2" aria-hidden="true"></i>
                            Explore Books First
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<section class="py-5 about-section">
    <div class="container text-center">
        <h2 class="fw-bold mb-4 text-dark">About BookHub</h2>
        <p class="lead text-dark">
            BookHub is your reading companion â€“ built for curious minds, students, and book lovers.
            Whether you're tracking your progress or exploring new titles, BookHub helps you stay inspired.
        </p>
    </div>
</section>
