@section Scripts {
    <script>
        function updateBookStatus(selectElement) {
            const bookId = selectElement.dataset.bookId;
            const newStatus = selectElement.value;
            const originalStatus = selectElement.dataset.currentStatus;
            selectElement.disabled = true;
            selectElement.style.opacity = '0.6';
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('newStatus', newStatus);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/VirtualBookshelf?handler=UpdateStatusWithDates', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    selectElement.dataset.currentStatus = newStatus;
                    let message = data.message;
                    if (newStatus === 'Reading' && originalStatus !== 'Reading') {
                        message += ' (Start date automatically set to today)';
                    } else if (newStatus === 'Read' && originalStatus !== 'Read') {
                        message += ' (Finish date automatically set to today)';
                    }
                    showToast('Success', message, 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    selectElement.value = originalStatus;
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                selectElement.value = originalStatus;
                showToast('Error', 'Failed to update status', 'error');
            })
            .finally(() => {
                selectElement.disabled = false;
                selectElement.style.opacity = '1';
            });
        }
        function updateOwnershipType(selectElement) {
            const bookId = selectElement.dataset.bookId;
            const newOwnershipType = selectElement.value;
            const originalOwnershipType = selectElement.dataset.currentOwnership;
            selectElement.disabled = true;
            selectElement.style.opacity = '0.6';
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('newOwnershipType', newOwnershipType);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/VirtualBookshelf?handler=UpdateOwnership', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    selectElement.dataset.currentOwnership = newOwnershipType;
                    showToast('Success', data.message, 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    selectElement.value = originalOwnershipType;
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                selectElement.value = originalOwnershipType;
                showToast('Error', 'Failed to update ownership type', 'error');
            })
            .finally(() => {
                selectElement.disabled = false;
                selectElement.style.opacity = '1';
            });
        }
        function showToast(title, message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer') || createToastContainer();
            const toastId = 'toast-' + Date.now();
            const bgClass = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-info';
            const icon = type === 'success' ? 'bi-check-circle' : type === 'error' ? 'bi-exclamation-triangle' : 'bi-info-circle';
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi ${icon} me-2"></i><strong>${title}:</strong> ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 3000 });
            toast.show();
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toastContainer';
            container.className = 'toast-container position-fixed top-0 end-0 p-3';
            container.style.zIndex = '9999';
            document.body.appendChild(container);
            return container;
        }
        function viewBookDetails(bookId) {
            const modal = new bootstrap.Modal(document.getElementById('bookDetailsModal'));
            modal.show();
            document.getElementById('bookDetailsBody').innerHTML = `
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;
            fetch(`/VirtualBookshelf?handler=BookDetails&bookId=${bookId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        renderBookDetails(data.book, data.userBook);
                    } else {
                        showErrorInModal(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showErrorInModal('Failed to load book details');
                });
        }
        function renderBookDetails(book, userBook) {
            const modalBody = document.getElementById('bookDetailsBody');
            const coverImage = book.coverUrl && book.coverUrl.trim() !== '' 
                ? `<img src="${book.coverUrl}" alt="${book.title}" class="img-fluid rounded shadow" style="max-height: 300px;">` 
                : `<div class="bg-light rounded d-flex align-items-center justify-content-center shadow" style="width: 200px; height: 300px;"><i class="bi bi-book text-muted" style="font-size: 3rem;"></i></div>`;
            const userInfo = userBook ? `
                <div class="row mt-4">
                    <div class="col-12">
                        <h5><i class="bi bi-person-circle me-2"></i>My Reading Info</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Status:</strong> <span class="badge bg-primary">${userBook.status}</span></p>
                                        <p><strong>Ownership:</strong> <span class="badge bg-success">${userBook.ownershipType}</span></p>
                                        <p><strong>Added:</strong> ${new Date(userBook.dateAdded).toLocaleDateString()}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Rating:</strong> ${userBook.rating ? '‚≠ê'.repeat(userBook.rating) + ` (${userBook.rating}/5)` : 'Not rated'}</p>
                                        <p><strong>Notes:</strong></p>
                                        <div class="border rounded p-2" style="min-height: 60px; background: white;">
                                            ${userBook.notes || '<em class="text-muted">No notes added</em>'}
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary mt-2" onclick="showEditNotesModal()">
                                            <i class="fas fa-edit me-1"></i>Edit Notes & Rating
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ` : '';
            modalBody.innerHTML = `
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        ${coverImage}
                    </div>
                    <div class="col-md-8">
                        <h4 class="text-primary">${book.title}</h4>
                        <p class="text-muted mb-2"><i class="bi bi-person-fill me-1"></i><strong>Author:</strong> ${book.author}</p>
                        <p class="text-muted mb-2"><i class="bi bi-bookmark-fill me-1"></i><strong>Genre:</strong> ${book.genre}</p>
                        ${book.isbn ? `<p class="text-muted mb-2"><i class="bi bi-upc-scan me-1"></i><strong>ISBN:</strong> ${book.isbn}</p>` : ''}
                        <p class="text-muted mb-3"><i class="bi bi-calendar-fill me-1"></i><strong>Added to Library:</strong> ${new Date(book.createdDate).toLocaleDateString()}</p>
                        ${book.description ? `
                            <div class="mt-3">
                                <h6><i class="bi bi-card-text me-1"></i>Description</h6>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-0">${book.description}</p>
                                </div>
                            </div>
                        ` : ''}
                    </div>
                </div>
                ${userInfo}
            `;
            currentBookForNotes = {
                bookId: book.bookId,
                title: book.title,
                notes: userBook ? userBook.notes : '',
                rating: userBook ? userBook.rating : null
            };
            const editBtn = document.getElementById('editBookBtn');
            if (userBook) {
                editBtn.style.display = 'inline-block';
            } else {
                editBtn.style.display = 'none';
            }
            document.getElementById('bookDetailsModalLabel').textContent = book.title;
        }
        function showErrorInModal(message) {
            document.getElementById('bookDetailsBody').innerHTML = `
                <div class="text-center py-4">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Error Loading Details</h5>
                    <p class="text-muted">${message}</p>
                </div>
            `;
        }
        function removeFromBookshelf(bookId, bookTitle) {
            const confirmed = confirm(
                `üóëÔ∏è Remove from Bookshelf\\n\\n` +
                `Are you sure you want to remove "${bookTitle}" from your bookshelf?\\n\\n` +
                `This action cannot be undone. The book will be completely removed from your collection.`
            );
            if (confirmed) {
                const formData = new FormData();
                formData.append('bookId', bookId);
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    formData.append('__RequestVerificationToken', token.value);
                }
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.disabled = true;
                button.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Removing...';
                fetch('/VirtualBookshelf?handler=RemoveFromBookshelf', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Success', `"${bookTitle}" has been removed from your bookshelf`, 'success');
                        const bookCard = button.closest('.user-book-card');
                        if (bookCard) {
                            bookCard.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                            bookCard.style.opacity = '0';
                            bookCard.style.transform = 'scale(0.8)';
                            setTimeout(() => {
                                bookCard.remove();
                                const remainingBooks = document.querySelectorAll('.user-book-card');
                                if (remainingBooks.length === 0) {
                                    window.location.reload();
                                }
                            }, 300);
                            setTimeout(() => {
                                updateBookshelfStats();
                            }, 500);
                        } else {
                            setTimeout(() => window.location.reload(), 1000);
                        }
                    } else {
                        showToast('Error', data.message, 'error');
                        button.disabled = false;
                        button.innerHTML = originalText;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showToast('Error', 'Failed to remove book from bookshelf', 'error');
                    button.disabled = false;
                    button.innerHTML = originalText;
                });
            }
        }
        function updateBookshelfStats() {
            setTimeout(() => window.location.reload(), 2000);
        }
        function showProgressModal(bookId, title, currentPage, totalPages, progress) {
            document.getElementById('progressBookId').value = bookId;
            document.getElementById('progressBookTitle').textContent = title;
            document.getElementById('currentPage').value = currentPage || '';
            document.getElementById('totalPages').value = totalPages || '';
            document.getElementById('readingProgress').value = progress || '';
            const modal = new bootstrap.Modal(document.getElementById('progressModal'));
            modal.show();
        }
        function updateReadingProgress() {
            const bookId = document.getElementById('progressBookId').value;
            const currentPage = document.getElementById('currentPage').value || null;
            const totalPages = document.getElementById('totalPages').value || null;
            const readingProgress = document.getElementById('readingProgress').value || null;
            if (!currentPage && !readingProgress) {
                showToast('Warning', 'Please enter either current page or reading percentage', 'warning');
                return;
            }
            const formData = new FormData();
            formData.append('bookId', bookId);
            if (currentPage) formData.append('currentPage', currentPage);
            if (totalPages) formData.append('totalPages', totalPages);
            if (readingProgress) formData.append('readingProgress', readingProgress);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/VirtualBookshelf?handler=UpdateReadingProgress', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Success', data.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('progressModal')).hide();
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Error', 'Failed to update reading progress', 'error');
            });
        }
        function showDateModal(bookId, title, status, dateStarted, dateFinished) {
            document.getElementById('dateBookId').value = bookId;
            document.getElementById('dateBookTitle').textContent = title;
            document.getElementById('currentStatus').value = status;
            document.getElementById('dateStarted').value = dateStarted || '';
            document.getElementById('dateFinished').value = dateFinished || '';
            const currentDatesDisplay = document.getElementById('currentDatesDisplay');
            let summaryHTML = '';
            if (dateStarted) {
                summaryHTML += `
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-play-circle text-info me-2"></i>
                        <strong>Started:</strong> 
                        <span class="text-info ms-2">${formatDate(dateStarted)}</span>
                        <i class="bi bi-magic text-primary ms-2" title="Auto-assigned"></i>
                    </div>`;
            } else {
                summaryHTML += `
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-play-circle text-muted me-2"></i>
                        <span class="text-muted">Start date not set</span>
                    </div>`;
            }
            if (dateFinished) {
                summaryHTML += `
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <strong>Finished:</strong> 
                        <span class="text-success ms-2">${formatDate(dateFinished)}</span>
                        <i class="bi bi-magic text-success ms-2" title="Auto-assigned"></i>
                    </div>`;
            } else {
                summaryHTML += `
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle text-muted me-2"></i>
                        <span class="text-muted">Finish date not set</span>
                    </div>`;
            }
            currentDatesDisplay.innerHTML = summaryHTML;
            const startLabel = document.querySelector('label[for="dateStarted"]');
            const finishLabel = document.querySelector('label[for="dateFinished"]');
            if (dateStarted) {
                startLabel.innerHTML = '<i class="bi bi-play-circle me-1"></i>Date Started Reading <small class="text-success">(Currently: ' + formatDate(dateStarted) + ')</small>';
            } else {
                startLabel.innerHTML = '<i class="bi bi-play-circle me-1"></i>Date Started Reading <small class="text-muted">(Not set)</small>';
            }
            if (dateFinished) {
                finishLabel.innerHTML = '<i class="bi bi-check-circle me-1"></i>Date Finished Reading <small class="text-success">(Currently: ' + formatDate(dateFinished) + ')</small>';
            } else {
                finishLabel.innerHTML = '<i class="bi bi-check-circle me-1"></i>Date Finished Reading <small class="text-muted">(Not set)</small>';
            }
            const modal = new bootstrap.Modal(document.getElementById('dateModal'));
            modal.show();
        }
        function formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }
        function updateReadingDates() {
            const bookId = document.getElementById('dateBookId').value;
            const status = document.getElementById('currentStatus').value;
            const dateStarted = document.getElementById('dateStarted').value || null;
            const dateFinished = document.getElementById('dateFinished').value || null;
            let newStatus = status;
            if (dateFinished) {
                newStatus = 'Read';
            } else if (dateStarted && !dateFinished) {
                newStatus = 'Reading';
            }
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('newStatus', newStatus);
            if (dateStarted) formData.append('dateStarted', dateStarted);
            if (dateFinished) formData.append('dateFinished', dateFinished);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/VirtualBookshelf?handler=UpdateStatusWithDates', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Success', data.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('dateModal')).hide();
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Error', 'Failed to update reading dates', 'error');
            });
        }
        let currentBookForNotes = null;
        function showEditNotesModal() {
            if (currentBookForNotes) {
                document.getElementById('notesBookId').value = currentBookForNotes.bookId;
                document.getElementById('notesBookTitle').textContent = currentBookForNotes.title;
                document.getElementById('bookNotes').value = currentBookForNotes.notes || '';
                document.getElementById('bookRating').value = currentBookForNotes.rating || '';
                updateNotesCharCount();
                const modal = new bootstrap.Modal(document.getElementById('editNotesModal'));
                modal.show();
            }
        }
        function updateNotesCharCount() {
            const notesTextarea = document.getElementById('bookNotes');
            const charCountSpan = document.getElementById('notesCharCount');
            const currentLength = notesTextarea.value.length;
            const maxLength = 1000;
            charCountSpan.textContent = `${currentLength}/${maxLength}`;
            if (currentLength > maxLength * 0.9) {
                charCountSpan.className = 'badge bg-warning';
            } else if (currentLength === maxLength) {
                charCountSpan.className = 'badge bg-danger';
            } else {
                charCountSpan.className = 'badge bg-secondary';
            }
        }
        function updateBookNotes() {
            const bookId = document.getElementById('notesBookId').value;
            const notes = document.getElementById('bookNotes').value;
            const rating = document.getElementById('bookRating').value || null;
            if (notes.length > 1000) {
                showToast('Error', 'Notes cannot exceed 1000 characters', 'error');
                return;
            }
            const formData = new FormData();
            formData.append('bookId', bookId);
            formData.append('notes', notes);
            if (rating) formData.append('rating', rating);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/VirtualBookshelf?handler=UpdateNotesAndRating', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Success', 'Notes and rating updated successfully!', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('editNotesModal')).hide();
                    bootstrap.Modal.getInstance(document.getElementById('bookDetailsModal')).hide();
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Error', 'Failed to update notes and rating', 'error');
            });
        }
        document.addEventListener('DOMContentLoaded', function() {
            const notesTextarea = document.getElementById('bookNotes');
            if (notesTextarea) {
                notesTextarea.addEventListener('input', updateNotesCharCount);
            }
        });
        }
    </script>
