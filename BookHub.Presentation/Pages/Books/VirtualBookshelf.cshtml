@page "/Books/VirtualBookshelf"
@model BookHub.Presentation.Pages.VirtualBookshelfModel
@{
    ViewData["Title"] = "My Bookshelf";
}
<form style="display: none;">
    @Html.AntiForgeryToken()
</form>
<div class="bookshelf-container">
    <div class="bookshelf-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="bi bi-bookshelf"></i>
                        My Personal Bookshelf
                    </h1>
                    <p class="page-subtitle">
                        Your personal library - @Model.TotalBooks book@(Model.TotalBooks != 1 ? "s" : "") in your collection
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="bookshelf-actions">
                        <a href="/Books" class="btn btn-success">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add More Books
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @if (Model.StatusStats.Any())
        {
            <div class="stats-section">
                <div class="row">
                    <div class="col-12">
                        <h5 class="stats-title">
                            <i class="bi bi-bar-chart me-2"></i>
                            Reading Progress
                        </h5>
                        <div class="reading-stats">
                            @foreach (var stat in Model.StatusStats)
                            {
                                <div class="stat-card">
                                    <div class="stat-count">@stat.Value</div>
                                    <div class="stat-label">@stat.Key</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="filter-section">
            <div class="row">
                <div class="col-12">
                    <div class="filter-buttons">
                        <a href="/Books/VirtualBookshelf?filter=All" 
                           class="btn filter-btn @(Model.CurrentFilter == "All" ? "active" : "")">
                            All Books
                        </a>
                        <a href="/Books/VirtualBookshelf?filter=Want to Read" 
                           class="btn filter-btn @(Model.CurrentFilter == "Want to Read" ? "active" : "")">
                            Want to Read
                        </a>
                        <a href="/Books/VirtualBookshelf?filter=Reading" 
                           class="btn filter-btn @(Model.CurrentFilter == "Reading" ? "active" : "")">
                            Currently Reading
                        </a>
                        <a href="/Books/VirtualBookshelf?filter=Read" 
                           class="btn filter-btn @(Model.CurrentFilter == "Read" ? "active" : "")">
                            Finished Reading
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mb-3">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-lightbulb me-2"></i>
                <strong>Smart Reading Tracking:</strong> 
                Start dates are automatically set when you mark books as "Reading", 
                and finish dates when you mark them as "Read". 
                Click the <strong>"Dates"</strong> button on any book to manually edit them.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        @if (Model.UserBooks.Any())
        {
            <div class="books-grid-section">
                <div class="row">
                    @foreach (var userBook in Model.UserBooks)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="user-book-card">
                                <div class="book-cover-container">
                                    @if (!string.IsNullOrEmpty(userBook.Book?.CoverUrl))
                                    {
                                        <img src="@userBook.Book.CoverUrl" alt="@userBook.Book.Title" class="book-cover-img">
                                    }
                                    else
                                    {
                                        <div class="placeholder-cover">
                                            <i class="bi bi-book"></i>
                                            <span>@userBook.Book?.Title</span>
                                        </div>
                                    }
                                    <div class="status-dropdown">
                                        <select class="form-select form-select-sm status-select" 
                                                data-book-id="@userBook.BookId" 
                                                data-current-status="@userBook.Status"
                                                onchange="updateBookStatus(this)">
                                            @{
                                                var statuses = new[] { 
                                                    new { Value = "Want to Read", Display = "üìö Want to Read" },
                                                    new { Value = "Reading", Display = "üìñ Reading" },
                                                    new { Value = "Read", Display = "‚úÖ Read" }
                                                };
                                            }
                                            @foreach(var status in statuses)
                                            {
                                                if(userBook.Status == status.Value)
                                                {
                                                    <option value="@status.Value" selected>@status.Display</option>
                                                }
                                                else
                                                {
                                                    <option value="@status.Value">@status.Display</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="ownership-dropdown">
                                        <select class="form-select form-select-sm ownership-select" 
                                                data-book-id="@userBook.BookId" 
                                                data-current-ownership="@userBook.OwnershipType"
                                                onchange="updateOwnershipType(this)">
                                            @{
                                                var ownershipTypes = new[] { 
                                                    new { Value = "Physical", Display = "üìö Physical" },
                                                    new { Value = "Digital", Display = "üíª Digital" },
                                                    new { Value = "Wishlist", Display = "‚ù§Ô∏è Wishlist" }
                                                };
                                            }
                                            @foreach(var ownership in ownershipTypes)
                                            {
                                                if(userBook.OwnershipType == ownership.Value)
                                                {
                                                    <option value="@ownership.Value" selected>@ownership.Display</option>
                                                }
                                                else
                                                {
                                                    <option value="@ownership.Value">@ownership.Display</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="book-info">
                                    <h5 class="book-title">@userBook.Book?.Title</h5>
                                    <p class="book-author">by @userBook.Book?.Author</p>
                                    @if (!string.IsNullOrEmpty(userBook.Book?.Genre))
                                    {
                                        <span class="book-genre">@userBook.Book.Genre</span>
                                    }
                                    @if (userBook.Rating.HasValue)
                                    {
                                        <div class="book-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= userBook.Rating.Value ? "-fill" : "") star"></i>
                                            }
                                        </div>
                                    }
                                    <small class="text-muted">
                                        Added @userBook.DateAdded.ToString("MMM dd, yyyy")
                                    </small>
                                    @if (userBook.DateStarted.HasValue || userBook.DateFinished.HasValue)
                                    {
                                        <div class="reading-dates mt-1">
                                            @if (userBook.DateStarted.HasValue)
                                            {
                                                <small class="text-info me-2" title="Auto-set when marked as 'Reading' (click Dates to edit)">
                                                    <i class="bi bi-play-circle me-1"></i>
                                                    Started: @userBook.DateStarted.Value.ToString("MMM dd, yyyy")
                                                    <i class="bi bi-magic text-primary ms-1" style="font-size: 0.7rem;"></i>
                                                </small>
                                            }
                                            @if (userBook.DateFinished.HasValue)
                                            {
                                                <small class="text-success" title="Auto-set when marked as 'Read' (click Dates to edit)">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Finished: @userBook.DateFinished.Value.ToString("MMM dd, yyyy")
                                                    <i class="bi bi-magic text-success ms-1" style="font-size: 0.7rem;"></i>
                                                </small>
                                            }
                                        </div>
                                    }
                                    @if (userBook.Status == "Reading" && (userBook.CurrentPage.HasValue || userBook.ReadingProgress.HasValue))
                                    {
                                        <div class="reading-progress mt-2">
                                            @if (userBook.CurrentPage.HasValue && userBook.TotalPages.HasValue && userBook.TotalPages > 0)
                                            {
                                                <div class="progress mb-1" style="height: 6px;">
                                                    <div class="progress-bar bg-primary" 
                                                         style="width: @(((double)userBook.CurrentPage.Value / userBook.TotalPages.Value) * 100)%"></div>
                                                </div>
                                                <small class="text-muted">
                                                    Page @userBook.CurrentPage.Value of @userBook.TotalPages.Value 
                                                    (@(Math.Round(((double)userBook.CurrentPage.Value / userBook.TotalPages.Value) * 100, 1))%)
                                                </small>
                                            }
                                            else if (userBook.ReadingProgress.HasValue)
                                            {
                                                <div class="progress mb-1" style="height: 6px;">
                                                    <div class="progress-bar bg-primary" 
                                                         style="width: @userBook.ReadingProgress.Value%"></div>
                                                </div>
                                                <small class="text-muted">@userBook.ReadingProgress.Value% Complete</small>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="book-actions">
                                    <a href="/Books/Details/@userBook.BookId" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="bi bi-eye me-1"></i>
                                        View Details
                                    </a>
                                    @if (userBook.Status == "Reading")
                                    {
                                        <button class="btn btn-outline-success btn-sm me-1" onclick="showProgressModal(@userBook.BookId, '@userBook.Book?.Title', @(userBook.CurrentPage ?? 0), @(userBook.TotalPages ?? 0), @(userBook.ReadingProgress ?? 0))">
                                            <i class="bi bi-graph-up me-1"></i>
                                            Update Progress
                                        </button>
                                    }
                                    <button class="btn btn-outline-info btn-sm me-1" onclick="showDateModal(@userBook.BookId, '@userBook.Book?.Title', '@userBook.Status', '@(userBook.DateStarted?.ToString("yyyy-MM-dd") ?? "")', '@(userBook.DateFinished?.ToString("yyyy-MM-dd") ?? "")')">
                                        <i class="bi bi-calendar me-1"></i>
                                        Dates
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm" onclick="removeFromBookshelf(@userBook.BookId, '@userBook.Book?.Title')">
                                        <i class="bi bi-trash me-1"></i>
                                        Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="empty-bookshelf">
                <div class="text-center py-5">
                    <i class="bi bi-bookshelf display-1 text-muted"></i>
                    <h3 class="mt-3 text-muted">Your bookshelf is empty</h3>
                    <p class="text-muted">Start building your personal library by adding some books!</p>
                    <a href="/Books" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-lg me-2"></i>
                        Browse & Add Books
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookDetailsModalLabel">Book Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="bookDetailsBody">
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="editBookBtn" style="display: none;" onclick="showEditNotesModal()">Edit Notes & Rating</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="progressModal" tabindex="-1" aria-labelledby="progressModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="progressModalLabel">Update Reading Progress</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="progressForm">
                    <input type="hidden" id="progressBookId" />
                    <div class="mb-3">
                        <h6 id="progressBookTitle" class="text-primary"></h6>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="currentPage" class="form-label">Current Page</label>
                                <input type="number" class="form-control" id="currentPage" min="0" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="totalPages" class="form-label">Total Pages</label>
                                <input type="number" class="form-control" id="totalPages" min="1" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="readingProgress" class="form-label">Reading Progress (%)</label>
                        <input type="number" class="form-control" id="readingProgress" min="0" max="100" step="0.1" />
                        <div class="form-text">You can use either page numbers or percentage</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateReadingProgress()">Update Progress</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="dateModal" tabindex="-1" aria-labelledby="dateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dateModalLabel">Manage Reading Dates</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="dateForm">
                    <input type="hidden" id="dateBookId" />
                    <input type="hidden" id="currentStatus" />
                    <div class="mb-3">
                        <h6 id="dateBookTitle" class="text-primary"></h6>
                    </div>
                    <div class="alert alert-light border mb-3" id="currentDatesSummary">
                        <h6 class="mb-2"><i class="bi bi-calendar-check me-2"></i>Current Reading Dates</h6>
                        <div id="currentDatesDisplay">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="dateStarted" class="form-label">
                            <i class="bi bi-play-circle me-1"></i>Date Started Reading
                        </label>
                        <input type="date" class="form-control" id="dateStarted" />
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Automatically set when you mark a book as "Reading"
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="dateFinished" class="form-label">
                            <i class="bi bi-check-circle me-1"></i>Date Finished Reading
                        </label>
                        <input type="date" class="form-control" id="dateFinished" />
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Automatically set when you mark a book as "Read"
                        </div>
                    </div>
                    <div class="alert alert-success">
                        <i class="bi bi-magic me-2"></i>
                        <strong>Smart Date Assignment:</strong> Dates are automatically set when you change book status, but you can edit them here anytime.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateReadingDates()">Update Dates</button>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>
        .bookshelf-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            padding-bottom: 2rem;
        }
        .bookshelf-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0 2rem 0;
            margin-bottom: 2rem;
        }
        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .page-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }
        .bookshelf-actions .btn {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }
        .bookshelf-actions .btn:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
        }
        .stats-section {
            margin-bottom: 2rem;
        }
        .stats-title {
            color: #495057;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        .reading-stats {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
        .stat-card {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            min-width: 120px;
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-count {
            font-size: 2rem;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 0.5rem;
        }
        .stat-label {
            color: #6c757d;
            font-weight: 500;
            font-size: 0.9rem;
        }
        .filter-section {
            margin-bottom: 2rem;
        }
        .filter-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        .filter-btn {
            background: white;
            border: 2px solid #e9ecef;
            color: #495057;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        .filter-btn:hover {
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-2px);
        }
        .filter-btn.active {
            background: #667eea;
            border-color: #667eea;
            color: white;
        }
        .user-book-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        .user-book-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }
        .book-cover-container {
            position: relative;
            padding: 1rem;
            text-align: center;
        }
        .book-cover-img {
            width: 120px;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .placeholder-cover {
            width: 120px;
            height: 180px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            margin: 0 auto;
        }
        .placeholder-cover i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .placeholder-cover span {
            font-size: 0.8rem;
            text-align: center;
            padding: 0 0.5rem;
        }
        .status-dropdown {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }
        .ownership-dropdown {
            position: absolute;
            top: 50px;
            right: 10px;
            z-index: 10;
        }
        .status-select, .ownership-select {
            font-size: 0.8rem;
            padding: 0.25rem 0.5rem;
            border: 2px solid #fff;
            border-radius: 6px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(5px);
            min-width: 140px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .status-select:hover, .ownership-select:hover {
            background: rgba(255, 255, 255, 1);
            border-color: #007bff;
            box-shadow: 0 2px 8px rgba(0,123,255,0.3);
        }
        .status-select:focus, .ownership-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
            background: rgba(255, 255, 255, 1);
        }
        .status-select option, .ownership-select option {
            padding: 0.5rem;
            font-size: 0.9rem;
        }
        .modal-content {
            border: none;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0;
            border: none;
        }
        .modal-header .btn-close {
            filter: invert(1);
        }
        .modal-body {
            padding: 2rem;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.5em 0.75em;
        }
        .book-details-card {
            transition: all 0.3s ease;
        }
        .book-details-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .status-badge {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        .status-want-to-read {
            background: #ffeaa7;
            color: #d63031;
        }
        .status-reading {
            background: #74b9ff;
            color: white;
        }
        .status-read {
            background: #00b894;
            color: white;
        }
        .book-info {
            padding: 0 1.5rem 1rem 1.5rem;
            flex-grow: 1;
        }
        .book-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }
        .book-author {
            color: #6c757d;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        .book-genre {
            background: #e9ecef;
            color: #495057;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            display: inline-block;
            margin-bottom: 0.5rem;
        }
        .book-rating {
            margin-bottom: 0.5rem;
        }
        .star {
            color: #ffc107;
            font-size: 0.9rem;
        }
        .book-actions {
            padding: 0 1.5rem 1.5rem 1.5rem;
            margin-top: auto;
        }
        .book-actions .btn {
            transition: all 0.3s ease;
        }
        .empty-bookshelf {
            background: white;
            border-radius: 12px;
            margin: 3rem 0;
            padding: 3rem;
        }
        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }
            .reading-stats {
                justify-content: center;
            }
            .filter-buttons {
                justify-content: center;
            }
            .book-actions {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
            }
            .book-actions .btn {
                flex: 1;
            }
        }
        .reading-dates {
            background: rgba(13, 110, 253, 0.1);
            padding: 0.5rem;
            border-radius: 6px;
            border-left: 3px solid #0d6efd;
        }
        .reading-progress {
            background: rgba(25, 135, 84, 0.1);
            padding: 0.5rem;
            border-radius: 6px;
            border-left: 3px solid #198754;
        }
        .reading-progress .progress {
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }
