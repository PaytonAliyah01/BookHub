@page "/Books/Details/{bookId:int}"
@model BookHub.Presentation.Pages.Books.BookDetailsModel
@{
    ViewData["Title"] = Model.Book?.Title ?? "Book Details";
}

<div class="container my-5">
    @if (Model.Book == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Book not found.
        </div>
        <a href="/Books" class="btn btn-primary">
            <i class="bi bi-arrow-left me-2"></i>Back to Books
        </a>
    }
    else
    {
        <div class="row">
            <!-- Book Cover and Actions -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img src="@(string.IsNullOrEmpty(Model.Book.CoverUrl) ? "/images/no-cover.jpg" : Model.Book.CoverUrl)" 
                         class="card-img-top" 
                         alt="@Model.Book.Title"
                         style="height: 500px; object-fit: cover;">
                    <div class="card-body">
                        @if (User.Identity?.IsAuthenticated == true && !User.HasClaim(c => c.Type == "AdminId"))
                        {
                            @if (Model.IsInBookshelf)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="bi bi-check-circle me-2"></i>
                                    In your bookshelf
                                </div>
                                <form method="post" asp-page-handler="RemoveFromBookshelf">
                                    <input type="hidden" name="bookId" value="@Model.Book.BookId" />
                                    <button type="submit" class="btn btn-danger w-100 mb-2">
                                        <i class="bi bi-trash me-2"></i>Remove from Bookshelf
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="btn btn-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#addToBookshelfModal">
                                    <i class="bi bi-plus-circle me-2"></i>Add to Bookshelf
                                </button>
                            }
                            <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#writeReviewModal">
                                <i class="bi bi-pencil-square me-2"></i>Write a Review
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Book Details -->
            <div class="col-md-8">
                <h1 class="display-4 mb-3">@Model.Book.Title</h1>
                <h3 class="text-muted mb-4">by @Model.Book.Author</h3>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Book Information</h5>
                        <hr>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-bookmark me-2"></i>Genre:</strong>
                                <span class="badge bg-info ms-2">@Model.Book.Genre</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-upc me-2"></i>ISBN:</strong>
                                <span class="ms-2">@Model.Book.ISBN</span>
                            </div>
                            <div class="col-12">
                                <strong><i class="bi bi-file-text me-2"></i>Description:</strong>
                                <p class="mt-2">@(string.IsNullOrEmpty(Model.Book.Description) ? "No description available." : Model.Book.Description)</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-square-text me-2"></i>Reviews (@Model.Reviews.Count)
                        </h5>
                        @if (Model.AverageRating > 0)
                        {
                            <div>
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-star-fill"></i> @Model.AverageRating.ToString("F1")
                                </span>
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        @if (Model.Reviews.Any())
                        {
                            foreach (var review in Model.Reviews)
                            {
                                <div class="border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">User @review.UserId</h6>
                                            <div class="text-warning mb-2">
                                                @for (int i = 0; i < review.Rating; i++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                @for (int i = review.Rating; i < 5; i++)
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            </div>
                                        </div>
                                        <small class="text-muted">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-0">@review.ReviewText</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center py-4">No reviews yet. Be the first to review this book!</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add to Bookshelf Modal -->
<div class="modal fade" id="addToBookshelfModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Bookshelf</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="AddToBookshelf">
                <div class="modal-body">
                    <input type="hidden" name="bookId" value="@Model.Book?.BookId" />
                    <div class="mb-3">
                        <label class="form-label">Reading Status</label>
                        <select name="status" class="form-select" required>
                            <option value="Want to Read">Want to Read</option>
                            <option value="Reading">Currently Reading</option>
                            <option value="Read">Already Read</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ownership Type</label>
                        <select name="ownershipType" class="form-select" required>
                            <option value="Physical">Physical Copy</option>
                            <option value="Digital">Digital/E-book</option>
                            <option value="Audiobook">Audiobook</option>
                            <option value="Borrowed">Borrowed</option>
                            <option value="Wishlist">Wishlist</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add to Bookshelf</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Write Review Modal -->
<div class="modal fade" id="writeReviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="WriteReview">
                <div class="modal-body">
                    <input type="hidden" name="bookId" value="@Model.Book?.BookId" />
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <select name="rating" class="form-select" required>
                            <option value="">Select rating...</option>
                            <option value="5">⭐⭐⭐⭐⭐ (5 stars)</option>
                            <option value="4">⭐⭐⭐⭐ (4 stars)</option>
                            <option value="3">⭐⭐⭐ (3 stars)</option>
                            <option value="2">⭐⭐ (2 stars)</option>
                            <option value="1">⭐ (1 star)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Your Review</label>
                        <textarea name="reviewText" class="form-control" rows="5" required maxlength="1000"></textarea>
                        <small class="text-muted">Maximum 1000 characters</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="toast show" role="alert">
            <div class="toast-header">
                <strong class="me-auto">@(TempData["MessageType"]?.ToString() == "success" ? "Success" : "Error")</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["Message"]
            </div>
        </div>
    </div>
}
