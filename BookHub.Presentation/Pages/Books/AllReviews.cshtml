@page "/Books/AllReviews"
@model BookHub.Presentation.Pages.AllReviewsModel
@{
    ViewData["Title"] = "All Reviews";
}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h1><i class="fas fa-comments me-2"></i>All Reviews</h1>
                    <p class="text-muted mb-0">Browse and discover what the community is saying about books</p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">@Model.TotalReviews Total Reviews</span>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Search Reviews</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" name="search" value="@Model.SearchQuery" 
                                       placeholder="Search books, authors, reviewers, or content...">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Rating</label>
                            <select class="form-select" name="rating">
                                <option value="">All Ratings</option>
                                @for (int i = 5; i >= 1; i--)
                                {
                                    var isSelected = Model.FilterRating == i;
                                    <option value="@i" selected="@isSelected">
                                        @i Star@(i > 1 ? "s" : "")
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Genre</label>
                            <select class="form-select" name="genre">
                                <option value="">All Genres</option>
                                @foreach (var genre in Model.AvailableGenres)
                                {
                                    var isGenreSelected = Model.FilterGenre == genre;
                                    <option value="@genre" selected="@isGenreSelected">
                                        @genre
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Sort By</label>
                            <select class="form-select" name="sort">
                                @{
                                    var isRecentSelected = Model.SortBy == "recent";
                                    var isOldestSelected = Model.SortBy == "oldest";
                                    var isRatingHighSelected = Model.SortBy == "rating_high";
                                    var isRatingLowSelected = Model.SortBy == "rating_low";
                                    var isTitleSelected = Model.SortBy == "title";
                                    var isAuthorSelected = Model.SortBy == "author";
                                }
                                <option value="recent" selected="@isRecentSelected">Most Recent</option>
                                <option value="oldest" selected="@isOldestSelected">Oldest</option>
                                <option value="rating_high" selected="@isRatingHighSelected">Highest Rated</option>
                                <option value="rating_low" selected="@isRatingLowSelected">Lowest Rated</option>
                                <option value="title" selected="@isTitleSelected">Book Title</option>
                                <option value="author" selected="@isAuthorSelected">Author</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-funnel me-1"></i>Filter
                            </button>
                        </div>
                    </form>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <hr class="my-3">
                        <div class="d-flex align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="myReviewsToggle" 
                                       @(Model.ShowMyReviews ? "checked" : "") 
                                       onchange="toggleMyReviews(this.checked)">
                                <label class="form-check-label fw-bold text-primary" for="myReviewsToggle">
                                    <i class="bi bi-person-circle me-1"></i>Show Only My Reviews
                                </label>
                            </div>
                            @if (Model.ShowMyReviews)
                            {
                                <span class="badge bg-info ms-3">Showing your reviews only</span>
                            }
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.FilterRating.HasValue || !string.IsNullOrEmpty(Model.FilterGenre) || Model.ShowMyReviews)
                    {
                        <hr class="my-3">
                        <div class="d-flex flex-wrap align-items-center gap-2">
                            <span class="text-muted me-2">Active Filters:</span>
                            @if (!string.IsNullOrEmpty(Model.SearchQuery))
                            {
                                <span class="badge bg-secondary">Search: "@Model.SearchQuery"</span>
                            }
                            @if (Model.FilterRating.HasValue)
                            {
                                <span class="badge bg-warning text-dark">@Model.FilterRating Stars</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.FilterGenre))
                            {
                                <span class="badge bg-info">@Model.FilterGenre</span>
                            }
                            @if (Model.ShowMyReviews)
                            {
                                <span class="badge bg-primary">My Reviews Only</span>
                            }
                            <a href="/Books/AllReviews" class="btn btn-outline-secondary btn-sm ms-2">
                                <i class="bi bi-x"></i> Clear Filters
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.AllReviews.Any())
    {
        <div class="row">
            @foreach (var review in Model.AllReviews)
            {
                <div class="col-lg-4 col-md-6 col-12 mb-4">
                    <div class="card review-card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 text-primary">
                                        <a href="/Books/BookReviews?bookId=@review.BookId" class="text-decoration-none">
                                            @(review.BookTitle ?? "Unknown Title")
                                        </a>
                                    </h6>
                                    <small class="text-muted">by @(review.BookAuthor ?? "Unknown Author")</small>
                                </div>
                                <div class="star-rating-small">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        @if (i <= review.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3 flex-grow-1">
                                <h6 class="review-title">@review.ReviewTitle</h6>
                                <p class="review-text text-muted">
                                    @if (review.ReviewText.Length > 200)
                                    {
                                        @review.ReviewText.Substring(0, 200)<span class="text-primary">... <small><em>read more</em></small></span>
                                    }
                                    else
                                    {
                                        @review.ReviewText
                                    }
                                </p>
                            </div>
                            <div class="review-meta mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="reviewer-info">
                                        <small class="text-muted">
                                            <i class="bi bi-person-circle me-1"></i>
                                            @(review.Username ?? "Anonymous")
                                        </small>
                                    </div>
                                    <div class="review-date">
                                        <small class="text-muted">
                                            @review.ReviewDate.ToString("MMM d, yyyy")
                                            @if (review.LastModified.HasValue)
                                            {
                                                <span class="ms-1">(edited)</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                                <div class="mt-2 d-flex justify-content-between align-items-center">
                                    <div class="d-flex gap-2">
                                        @if (review.IsRecommended)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-hand-thumbs-up me-1"></i>Recommended
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">Not Recommended</span>
                                        }
                                    </div>
                                    <div class="d-flex gap-1">
                                        @{
                                            var currentUserId = 0;
                                            if (User.Identity?.IsAuthenticated == true)
                                            {
                                                var userIdClaim = User.FindFirst("UserId")?.Value;
                                                int.TryParse(userIdClaim, out currentUserId);
                                            }
                                        }
                                        @if (currentUserId > 0 && currentUserId == review.UserId)
                                        {
                                            <a href="/Books/BookReviews?bookId=@review.BookId" class="btn btn-outline-primary btn-sm" title="Edit Review">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" asp-page-handler="DeleteReview" asp-route-reviewId="@review.ReviewId" class="d-inline">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                        onclick="return confirm('Are you sure you want to delete this review?')" 
                                                        title="Delete Review">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        <a href="/Books/BookReviews?bookId=@review.BookId" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-arrow-right me-1"></i>View Book
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Reviews pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Model.GetPaginationUrl(Model.CurrentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @{
                        int startPage = Math.Max(1, Model.CurrentPage - 2);
                        int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    }
                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Model.GetPaginationUrl(1)">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Model.GetPaginationUrl(i)">@i</a>
                        </li>
                    }
                    @if (endPage < Model.TotalPages)
                    {
                        @if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="@Model.GetPaginationUrl(Model.TotalPages)">@Model.TotalPages</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Model.GetPaginationUrl(Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center text-muted mb-4">
                Showing @((Model.CurrentPage - 1) * 12 + 1) to @(Math.Min(Model.CurrentPage * 12, Model.TotalReviews)) of @Model.TotalReviews reviews
                (Page @Model.CurrentPage of @Model.TotalPages)
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-search display-1 text-muted opacity-50"></i>
            </div>
            <h3 class="text-muted">No Reviews Found</h3>
            @if (Model.ShowMyReviews)
            {
                <p class="text-muted">You haven't written any reviews yet. <a href="/Books/Books">Browse books</a> and share your thoughts!</p>
            }
            else if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.FilterRating.HasValue || !string.IsNullOrEmpty(Model.FilterGenre))
            {
                <p class="text-muted">Try adjusting your search criteria or <a href="/Books/AllReviews">clear all filters</a>.</p>
            }
            else
            {
                <p class="text-muted">No reviews have been written yet. <a href="/Books/Books">Browse books</a> and be the first to write a review!</p>
            }
        </div>
    }
</div>
<script>
    function toggleMyReviews(checked) {
        const currentUrl = new URL(window.location);
        if (checked) {
            currentUrl.searchParams.set('myreviews', 'true');
        } else {
            currentUrl.searchParams.delete('myreviews');
        }
        currentUrl.searchParams.delete('page');
        window.location.href = currentUrl.toString();
    }
</script>
<style>
    .review-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-left: 4px solid #007bff;
    }
    .review-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
    }
    .review-title {
        color: #495057;
        font-weight: 600;
        line-height: 1.3;
    }
    .review-text {
        font-size: 0.9em;
        line-height: 1.5;
    }
    .star-rating-small .fa-star {
        font-size: 0.9em;
        margin-right: 1px;
    }
    .reviewer-info {
        font-weight: 500;
    }
    .card-header {
        border-bottom: 1px solid #e9ecef;
    }
    .badge {
        font-size: 0.75em;
    }
    .pagination .page-link {
        border-radius: 6px;
        margin: 0 2px;
        border: 1px solid #dee2e6;
    }
    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
    @@media (max-width: 768px) {
        .card-header .d-flex {
            flex-direction: column;
            align-items: start !important;
        }
        .star-rating-small {
            margin-top: 8px;
        }
    }
</style>
