                .then(response => response.json())
                .then(data => {
                    if (data.success && data.book) {
                        const book = data.book;
                        modalContent.innerHTML = `
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    ${book.coverUrl ? 
                                        `<img src="${book.coverUrl}" alt="${book.title}" class="img-fluid rounded" style="max-height: 300px;">` : 
                                        `<div class="placeholder-cover-large d-flex flex-column align-items-center justify-content-center" style="height: 300px; background-color: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 8px;">
                                            <i class="bi bi-book display-4 text-muted"></i>
                                            <p class="mt-2 text-muted">No Cover Available</p>
                                        </div>`
                                    }
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-primary">${book.title}</h4>
                                    <h6 class="text-muted">by ${book.author}</h6>
                                    <hr>
                                    <div class="mb-3">
                                        <p><strong>Genre:</strong> ${book.genre || 'Not specified'}</p>
                                        ${book.isbn ? `<p><strong>ISBN:</strong> ${book.isbn}</p>` : ''}
                                    </div>
                                    ${book.description ? `
                                        <div class="mb-3">
                                            <h6><strong>Description:</strong></h6>
                                            <p class="text-justify" style="line-height: 1.6;">${book.description}</p>
                                        </div>
                                    ` : ''}
                                    <div class="mt-4">
                                        <button class="btn btn-success me-2 add-to-bookshelf-btn" 
                                                data-book-id="${book.bookId}"
                                                data-book-title="${book.title}"
                                                data-book-author="${book.author}">
                                            <i class="bi bi-bookmark-plus me-1"></i>
                                            Add to My Shelf
                                        </button>
                                        <button class="btn btn-outline-primary" onclick="window.open('https://www.google.com/search?q=${encodeURIComponent(book.title + ' ' + book.author + ' book')}&tbm=shop', '_blank')">
                                            <i class="bi bi-search me-1"></i>
                                            Find Online
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `;
                        const modalAddBtn = modalContent.querySelector('.add-to-bookshelf-btn');
                        if (modalAddBtn) {
                            modalAddBtn.addEventListener('click', function() {
                                const bookId = this.dataset.bookId;
                                const bookTitle = this.dataset.bookTitle;
                                const bookAuthor = this.dataset.bookAuthor;
                                addToBookshelf(bookId, bookTitle, bookAuthor, this);
                            });
                        }
                    } else {
                        modalContent.innerHTML = `
                            <div class="text-center text-danger">
                                <i class="bi bi-exclamation-triangle display-4"></i>
                                <h5 class="mt-3">Error Loading Book Details</h5>
                                <p>${data.message || 'Unable to load book information'}</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error loading book details:', error);
                    modalContent.innerHTML = `
                        <div class="text-center text-danger">
                            <i class="bi bi-exclamation-triangle display-4"></i>
                            <h5 class="mt-3">Connection Error</h5>
                            <p>Unable to connect to server. Please try again.</p>
                        </div>
                    `;
                });
        }
        function showAlert(type, message, duration = 5000) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x`;
            alert.style.zIndex = '9999';
            alert.style.marginTop = '20px';
            alert.innerHTML = `
                <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alert);
            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, duration);
        }
        function showToast(title, message, type = 'success') {
            let toastContainer = document.querySelector('.toast-container');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.className = 'toast-container';
                document.body.appendChild(toastContainer);
            }
            const toastId = 'toast-' + Date.now();
            const toastHTML = `
                <div id="${toastId}" class="toast book-toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;
            toastContainer.insertAdjacentHTML('beforeend', toastHTML);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
        function markAsRead(bookId, title, buttonElement) {
            const originalHTML = buttonElement.innerHTML;
            buttonElement.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Updating...';
            buttonElement.disabled = true;
            const formData = new FormData();
            formData.append('bookId', bookId);
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                formData.append('__RequestVerificationToken', token.value);
            }
            fetch('/Books?handler=MarkAsRead', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.progressUpdated) {
                        showToast(data.message, 'success');
                        updateProgressWidget(data.booksRead, data.targetBooks);
                    } else {
                        showToast(data.message, 'success');
                    }
                    buttonElement.innerHTML = '<i class="fas fa-check-circle me-1"></i>Read!';
                    buttonElement.classList.remove('btn-primary');
                    buttonElement.classList.add('btn-success');
                    buttonElement.disabled = true;
                } else {
                    showToast(data.message || 'Failed to mark book as read', 'error');
                    buttonElement.innerHTML = originalHTML;
                    buttonElement.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error marking book as read:', error);
                showToast('Error marking book as read', 'error');
                buttonElement.innerHTML = originalHTML;
                buttonElement.disabled = false;
            });
        }
        function updateProgressWidget(booksRead, targetBooks) {
            const progressBadge = document.querySelector('.reading-progress-mini .badge');
            const progressBar = document.querySelector('.reading-progress-mini .progress-bar');
            if (progressBadge && progressBar) {
                progressBadge.textContent = `${booksRead}/${targetBooks}`;
                const percentage = targetBooks > 0 ? (booksRead / targetBooks) * 100 : 0;
                progressBar.style.width = `${Math.min(100, percentage)}%`;
            }
        }
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.mark-as-read-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const bookId = this.dataset.bookId;
                    const title = this.dataset.bookTitle;
                    markAsRead(bookId, title, this);
                });
            });
        });
    </script>
