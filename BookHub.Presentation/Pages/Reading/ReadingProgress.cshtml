@page "/Reading/Progress"
@model BookHub.Presentation.Pages.ReadingProgressModel
@{
    ViewData["Title"] = "Reading Progress";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-book-reader text-primary"></i> Reading Progress Tracker</h2>
            <p class="text-muted">Track your reading journey with dates and progress tracking</p>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.Message.Contains("successfully") ? "alert-success" : "alert-danger") alert-dismissible fade show">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (Model.CurrentUser != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-book-open"></i> Currently Reading (@Model.CurrentlyReadingBooks.Count)</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.CurrentlyReadingBooks.Any())
                        {
                            <div class="row">
                                @foreach (var book in Model.CurrentlyReadingBooks)
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card h-100 border-info">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <small class="text-info">
                                                        @if (book.DateStarted.HasValue)
                                                        {
                                                            <text><i class="fas fa-play"></i> Started: @book.DateStarted.Value.ToString("MMM dd, yyyy")</text>
                                                        }
                                                        else
                                                        {
                                                            <text><i class="fas fa-calendar"></i> Added: @book.DateAdded.ToString("MMM dd, yyyy")</text>
                                                        }
                                                    </small>
                                                    <span class="badge bg-info">Reading</span>
                                                </div>
                                                @if (book.Book != null)
                                                {
                                                    <h6 class="card-title">@book.Book.Title</h6>
                                                    <p class="card-text text-muted small">by @book.Book.Author</p>
                                                    @if (!string.IsNullOrEmpty(book.Book.Genre))
                                                    {
                                                        <span class="badge bg-secondary mb-2">@book.Book.Genre</span>
                                                    }
                                                }
                                                <div class="mt-3">
                                                    <h6 class="small text-muted">Reading Progress</h6>
                                                    @if (book.CalculatedProgress.HasValue)
                                                    {
                                                        <div class="progress mb-2" style="height: 20px;">
                                                            <div class="progress-bar bg-success" style="width: @book.CalculatedProgress%">
                                                                @Math.Round(book.CalculatedProgress.Value, 1)%
                                                            </div>
                                                        </div>
                                                    }
                                                    <form method="post" asp-page-handler="UpdateProgress" class="mb-3">
                                                        <input type="hidden" name="bookId" value="@book.BookId" />
                                                        <div class="row g-2">
                                                            <div class="col-4">
                                                                <input type="number" name="currentPage" class="form-control form-control-sm" 
                                                                       placeholder="Page" value="@book.CurrentPage" min="0">
                                                            </div>
                                                            <div class="col-4">
                                                                <input type="number" name="totalPages" class="form-control form-control-sm" 
                                                                       placeholder="Total" value="@book.TotalPages" min="1">
                                                            </div>
                                                            <div class="col-4">
                                                                <input type="number" step="0.1" name="readingProgress" class="form-control form-control-sm" 
                                                                       placeholder="%" value="@book.ReadingProgress" min="0" max="100">
                                                            </div>
                                                        </div>
                                                        <button type="submit" class="btn btn-sm btn-outline-success mt-2">
                                                            <i class="fas fa-save"></i> Update Progress
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-page-handler="UpdateStatus" style="display: inline;">
                                                        <input type="hidden" name="bookId" value="@book.BookId" />
                                                        <input type="hidden" name="newStatus" value="Read" />
                                                        <input type="hidden" name="dateStarted" value="@book.DateStarted?.ToString("yyyy-MM-dd")" />
                                                        <input type="hidden" name="dateFinished" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="fas fa-check"></i> Mark as Finished
                                                        </button>
                                                    </form>
                                                </div>
                                                @if (!string.IsNullOrEmpty(book.Notes))
                                                {
                                                    <div class="mt-2">
                                                        <small class="text-muted">
                                                            <i class="fas fa-sticky-note"></i> @book.Notes
                                                        </small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No books currently being read</h5>
                                <p class="text-muted">Start reading a book to track your progress here!</p>
                                <a href="/Books/Books" class="btn btn-primary">Browse Books</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-check-circle"></i> Recently Finished</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentlyFinishedBooks.Any())
                        {
                            <div class="row">
                                @foreach (var book in Model.RecentlyFinishedBooks)
                                {
                                    <div class="col-md-6 col-lg-3 mb-3">
                                        <div class="card h-100 border-success">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <small class="text-success">
                                                        @if (book.DateFinished.HasValue)
                                                        {
                                                            <text><i class="fas fa-flag-checkered"></i> @book.DateFinished.Value.ToString("MMM dd")</text>
                                                        }
                                                        else
                                                        {
                                                            <text><i class="fas fa-check"></i> Completed</text>
                                                        }
                                                    </small>
                                                    @if (book.Rating.HasValue)
                                                    {
                                                        <div class="text-warning">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                <i class="fas fa-star@(i <= book.Rating.Value ? "" : " text-muted")" style="font-size: 0.8em;"></i>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                                @if (book.Book != null)
                                                {
                                                    <h6 class="card-title small">@book.Book.Title</h6>
                                                    <p class="card-text text-muted" style="font-size: 0.85em;">@book.Book.Author</p>
                                                }
                                                @if (book.DateStarted.HasValue && book.DateFinished.HasValue)
                                                {
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock"></i> 
                                                        @book.DaysReading day@(book.DaysReading != 1 ? "s" : "")
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-trophy fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No books finished recently</h5>
                                <p class="text-muted">Complete some books to see your achievements here!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-line"></i> Reading Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="card bg-info text-white h-100">
                                    <div class="card-body">
                                        <h3>@Model.CurrentlyReadingBooks.Count</h3>
                                        <p class="mb-0">Currently Reading</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white h-100">
                                    <div class="card-body">
                                        <h3>@Model.RecentlyFinishedBooks.Count(b => b.DateFinished?.Year == DateTime.Now.Year)</h3>
                                        <p class="mb-0">Finished This Year</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white h-100">
                                    <div class="card-body">
                                        <h3>@(Model.RecentlyFinishedBooks.Where(b => b.DateStarted.HasValue && b.DateFinished.HasValue).Any() ? Math.Round(Model.RecentlyFinishedBooks.Where(b => b.DateStarted.HasValue && b.DateFinished.HasValue).Average(b => b.DaysReading), 1) : 0)</h3>
                                        <p class="mb-0">Avg. Days per Book</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-primary text-white h-100">
                                    <div class="card-body">
                                        <h3>@(Model.RecentlyFinishedBooks.Where(b => b.Rating.HasValue).Any() ? Math.Round((decimal)Model.RecentlyFinishedBooks.Where(b => b.Rating.HasValue).Average(b => b.Rating!.Value), 1) : 0)</h3>
                                        <p class="mb-0">Average Rating</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Please log in to track your reading progress</h4>
            <p>Your reading progress and tracking will appear here once you're logged in.</p>
            <a href="/Auth/Login" class="btn btn-primary">Login</a>
        </div>
    }
</div>
<style>
.progress {
    border-radius: 0.25rem;
}
.card {
    transition: box-shadow 0.15s ease-in-out;
}
.card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}
.form-control-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>
