@page "/Reading/Analytics"
@model BookHub.Presentation.Pages.AnalyticsModel
@{
    ViewData["Title"] = "Reading Analytics";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-chart-bar text-primary"></i> Reading Analytics</h2>
            <p class="text-muted">Insights into your reading journey and progress</p>
        </div>
    </div>
    @if (Model.CurrentUser != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-gradient-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">ðŸ“Š Your Reading Dashboard</h5>
                        <div class="row">
                            @if (Model.ReadingProgressData.ContainsKey("ReadingStats"))
                            {
                                var stats = (Dictionary<string, object>)Model.ReadingProgressData["ReadingStats"];
                                <div class="col-md-3 text-center">
                                    <h3 class="text-white">@stats["TotalBooksRead"]</h3>
                                    <small>Books Read</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h3 class="text-white">@stats["CurrentReadingStreak"]</h3>
                                    <small>Reading Streak</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h3 class="text-white">@stats["FavoriteGenre"]</h3>
                                    <small>Favorite Genre</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    @if (stats.ContainsKey("YearlyGoalProgress"))
                                    {
                                        <h3 class="text-white">@Math.Round((double)stats["YearlyGoalProgress"], 1)%</h3>
                                        <small>Goal Progress</small>
                                    }
                                    else
                                    {
                                        <h3 class="text-white">No Goal</h3>
                                        <small>Set a reading goal!</small>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-target"></i> Reading Goals History</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="readingGoalsChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calendar"></i> Monthly Reading (@DateTime.Now.Year)</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyProgressChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-layer-group"></i> Genre Distribution</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="genreChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-list-check"></i> Reading Status</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="statusChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-star"></i> Your Review Ratings</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="ratingDistributionChart" width="400" height="300"></canvas>
                        <p class="text-center text-muted mt-3">Review analytics coming soon!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-plus"></i> Books Added to Library</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="booksAddedChart" width="400" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-line"></i> Reading Insights</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (Model.BookshelfAnalytics.ContainsKey("TotalBooks"))
                            {
                                <div class="col-md-3 text-center">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h4 class="text-info">@Model.BookshelfAnalytics["TotalBooks"]</h4>
                                            <p class="mb-0">Total Books in Library</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.ReviewAnalytics.ContainsKey("TotalReviews"))
                            {
                                <div class="col-md-3 text-center">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h4 class="text-success">@Model.ReviewAnalytics["TotalReviews"]</h4>
                                            <p class="mb-0">Reviews Written</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.ReviewAnalytics.ContainsKey("AverageRating"))
                            {
                                <div class="col-md-3 text-center">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h4 class="text-warning">@Model.ReviewAnalytics["AverageRating"]<small>/5</small></h4>
                                            <p class="mb-0">Average Rating Given</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.ReadingProgressData.ContainsKey("CurrentYearGoal") && Model.ReadingProgressData["CurrentYearGoal"] != null)
                            {
                                var currentGoal = (dynamic)Model.ReadingProgressData["CurrentYearGoal"];
                                <div class="col-md-3 text-center">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h4 class="text-primary">@currentGoal.BooksRemaining</h4>
                                            <p class="mb-0">Books to Goal</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-3 text-center">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h4 class="text-muted">No Goal</h4>
                                            <p class="mb-0"><a href="/Reading/Goals">Set a Goal</a></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script id="analytics-data" type="application/json">
            {
                "readingGoalsHistory": @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ReadingProgressData.ContainsKey("ReadingGoalsHistory") ? Model.ReadingProgressData["ReadingGoalsHistory"] : new object[]{})),
                "monthlyProgress": @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ReadingProgressData.ContainsKey("MonthlyProgress") ? Model.ReadingProgressData["MonthlyProgress"] : new object[]{})),
                "genreBreakdown": @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ReadingProgressData.ContainsKey("GenreBreakdown") ? Model.ReadingProgressData["GenreBreakdown"] : new Dictionary<string, int>())),
                "statusBreakdown": @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookshelfAnalytics.ContainsKey("StatusBreakdown") ? Model.BookshelfAnalytics["StatusBreakdown"] : new Dictionary<string, int>())),
                "booksAddedOverTime": @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookshelfAnalytics.ContainsKey("BooksAddedOverTime") ? Model.BookshelfAnalytics["BooksAddedOverTime"] : new object[]{}))
            }
        </script>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>Please log in to view your analytics</h4>
            <p>Your personal reading analytics will appear here once you're logged in.</p>
            <a href="/Auth/Login" class="btn btn-primary">Login</a>
        </div>
    }
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const dataElement = document.getElementById('analytics-data');
    if (!dataElement) return;
    const data = JSON.parse(dataElement.textContent);
    if (data.readingGoalsHistory && data.readingGoalsHistory.length > 0) {
        const ctx1 = document.getElementById('readingGoalsChart').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: data.readingGoalsHistory.map(d => d.year),
                datasets: [{
                    label: 'Target Books',
                    data: data.readingGoalsHistory.map(d => d.target),
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }, {
                    label: 'Books Read',
                    data: data.readingGoalsHistory.map(d => d.actual),
                    backgroundColor: 'rgba(75, 192, 192, 0.7)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    if (data.monthlyProgress && data.monthlyProgress.length > 0) {
        const ctx2 = document.getElementById('monthlyProgressChart').getContext('2d');
        new Chart(ctx2, {
            type: 'line',
            data: {
                labels: data.monthlyProgress.map(d => d.month),
                datasets: [{
                    label: 'Books Read',
                    data: data.monthlyProgress.map(d => d.books),
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    if (data.genreBreakdown && Object.keys(data.genreBreakdown).length > 0) {
        const genreLabels = Object.keys(data.genreBreakdown);
        const genreValues = Object.values(data.genreBreakdown);
        const ctx3 = document.getElementById('genreChart').getContext('2d');
        new Chart(ctx3, {
            type: 'doughnut',
            data: {
                labels: genreLabels,
                datasets: [{
                    data: genreValues,
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                        '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    }
    if (data.statusBreakdown && Object.keys(data.statusBreakdown).length > 0) {
        const statusLabels = Object.keys(data.statusBreakdown);
        const statusValues = Object.values(data.statusBreakdown);
        const ctx4 = document.getElementById('statusChart').getContext('2d');
        new Chart(ctx4, {
            type: 'pie',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusValues,
                    backgroundColor: [
                        '#28a745', '#ffc107', '#dc3545', '#6c757d'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    }
    if (data.booksAddedOverTime && data.booksAddedOverTime.length > 0) {
        const ctx6 = document.getElementById('booksAddedChart').getContext('2d');
        new Chart(ctx6, {
            type: 'line',
            data: {
                labels: data.booksAddedOverTime.map(d => d.month),
                datasets: [{
                    label: 'Books Added',
                    data: data.booksAddedOverTime.map(d => d.count),
                    borderColor: 'rgba(153, 102, 255, 1)',
                    backgroundColor: 'rgba(153, 102, 255, 0.2)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
});
</script>
<style>
.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: 1px solid rgba(0, 0, 0, 0.125);
}
.bg-gradient-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
}
.chart-container {
    position: relative;
    height: 300px;
}
.card-body canvas {
    max-height: 300px;
}
</style>
